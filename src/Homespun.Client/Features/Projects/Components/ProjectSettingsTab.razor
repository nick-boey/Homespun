<div class="settings-tab-content">
    <BbCard Class="mb-3">
        <BbCardHeader><BbCardTitle>Project Information</BbCardTitle></BbCardHeader>
        <BbCardContent>
            <dl class="info-list">
                <dt>Local Path</dt>
                <dd><code>@Project.LocalPath</code></dd>
                <dt>Default Branch</dt>
                <dd>@Project.DefaultBranch</dd>
                @if (!string.IsNullOrEmpty(Project.GitHubOwner) && !string.IsNullOrEmpty(Project.GitHubRepo))
                {
                    <dt>GitHub Repository</dt>
                    <dd>
                        <a href="https://github.com/@Project.GitHubOwner/@Project.GitHubRepo"
                           target="_blank">
                            @Project.GitHubOwner/@Project.GitHubRepo
                        </a>
                    </dd>
                }
            </dl>
        </BbCardContent>
    </BbCard>
</div>

<style>
    .settings-tab-content {
        max-width: 800px;
    }

    .info-list {
        display: grid;
        grid-template-columns: auto 1fr;
        gap: var(--spacing-sm) var(--spacing-lg);
        align-items: baseline;
    }

    .info-list dt {
        font-weight: 600;
        color: var(--text-muted);
        font-size: 0.875rem;
        white-space: nowrap;
    }

    .info-list dd {
        margin: 0;
        color: var(--text-primary);
        font-size: 0.875rem;
    }
</style>

@code {
    [Parameter] public required Project Project { get; set; }
}
