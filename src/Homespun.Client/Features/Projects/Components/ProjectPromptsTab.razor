@inject HttpAgentPromptApiService AgentPromptApi

<div class="d-flex justify-content-between align-items-center mb-3">
    <h5 class="mb-0">Project Prompts</h5>
    <div class="d-flex gap-2">
        @if (_availableGlobalPrompts.Any())
        {
            <div class="dropdown">
                <BbButton Variant="ButtonVariant.Outline" Size="ButtonSize.Small" data-bs-toggle="dropdown" aria-expanded="false">
                    <LucideIcon Name="files" Size="14" Class="me-1" />
                    Copy from Global
                </BbButton>
                <ul class="dropdown-menu dropdown-menu-end">
                    @foreach (var globalPrompt in _availableGlobalPrompts)
                    {
                        <li>
                            <button class="dropdown-item" @onclick="() => CopyFromGlobal(globalPrompt)">
                                @globalPrompt.Name
                                <span class="badge @(globalPrompt.Mode == SessionMode.Plan ? "bg-info" : "bg-success") ms-2">
                                    @globalPrompt.Mode
                                </span>
                            </button>
                        </li>
                    }
                </ul>
            </div>
        }
        <BbButton Variant="ButtonVariant.Default" Size="ButtonSize.Small" OnClick="ShowAddModal">
            <LucideIcon Name="plus" Size="14" Class="me-1" />
            Add Prompt
        </BbButton>
    </div>
</div>

<p class="text-muted small mb-3">
    Project prompts override global prompts with the same name. Use "Copy from Global" to customise an existing global prompt for this project.
</p>

@if (!_prompts.Any())
{
    <BbEmpty Title="No Project Prompts" Description="This project uses global prompts only. Add a project-specific prompt to customise agent behaviour for this project.">
        <Icon>
            <LucideIcon Name="sparkles" Size="48" />
        </Icon>
        <ChildContent>
            <BbButton OnClick="ShowAddModal">Add Prompt</BbButton>
        </ChildContent>
    </BbEmpty>
}
else
{
    <div class="row">
        @foreach (var prompt in _prompts)
        {
            <div class="col-md-6 col-lg-4 mb-3">
                <div class="card h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span class="fw-bold">@prompt.Name</span>
                        <span class="badge @(prompt.Mode == SessionMode.Plan ? "bg-info" : "bg-success")">
                            @prompt.Mode
                        </span>
                    </div>
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(prompt.InitialMessage))
                        {
                            <pre class="prompt-preview mb-0">@TruncateMessage(prompt.InitialMessage)</pre>
                        }
                        else
                        {
                            <p class="text-muted mb-0"><em>No initial message configured</em></p>
                        }
                    </div>
                    <div class="card-footer d-flex justify-content-end gap-2">
                        <BbButton Variant="ButtonVariant.Outline" Size="ButtonSize.Small" OnClick="() => ShowEditModal(prompt)">
                            Edit
                        </BbButton>
                        <BbButton Variant="ButtonVariant.Destructive" Size="ButtonSize.Small" OnClick="() => ShowDeleteConfirmation(prompt)">
                            Delete
                        </BbButton>
                    </div>
                </div>
            </div>
        }
    </div>
}

<BbDialog Open="@_showModal" OnOpenChange="v => { if (!v) HideModal(); }">
    <BbDialogContent Class="sm:max-w-2xl">
        <BbDialogHeader>
            <BbDialogTitle>@(_editingPrompt == null ? "Add Project Prompt" : "Edit Project Prompt")</BbDialogTitle>
        </BbDialogHeader>
        <BbDialogBody>
            <div class="mb-3">
                <label class="form-label">Name</label>
                <input type="text" class="form-control" @bind="_modalName" placeholder="e.g., Plan, Build, Review" />
            </div>
            <div class="mb-3">
                <label class="form-label">Mode</label>
                <select class="form-select" @bind="_modalMode">
                    <option value="@SessionMode.Plan">Plan (Read-only tools)</option>
                    <option value="@SessionMode.Build">Build (Full access)</option>
                </select>
                <div class="form-text">
                    Plan mode restricts the agent to read-only tools. Build mode allows code editing.
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label">Initial Message Template</label>
                <textarea class="form-control font-monospace" rows="12" @bind="_modalMessage"
                    placeholder="Enter the initial message to send to the agent..."></textarea>
                <div class="form-text">
                    Available placeholders: <code>@("{{title}}")</code>, <code>@("{{id}}")</code>,
                    <code>@("{{type}}")</code>, <code>@("{{branch}}")</code>, <code>@("{{description}}")</code>
                </div>
            </div>
        </BbDialogBody>
        <BbDialogFooter>
            @if (!string.IsNullOrEmpty(_modalError))
            {
                <div class="text-danger me-auto">@_modalError</div>
            }
            <BbButton Variant="ButtonVariant.Secondary" OnClick="HideModal">Cancel</BbButton>
            <BbButton OnClick="SavePrompt" Loading="@_isSaving" LoadingText="Saving...">Save</BbButton>
        </BbDialogFooter>
    </BbDialogContent>
</BbDialog>

<BbAlertDialog Open="@(_showDeleteConfirmation && _promptToDelete != null)" OnOpenChange="v => { if (!v) HideDeleteConfirmation(); }">
    <BbAlertDialogContent>
        <BbAlertDialogHeader>
            <BbAlertDialogTitle>Delete Project Prompt</BbAlertDialogTitle>
            <BbAlertDialogDescription>
                Are you sure you want to delete the project prompt <strong>"@_promptToDelete?.Name"</strong>?
                This action cannot be undone.
            </BbAlertDialogDescription>
        </BbAlertDialogHeader>
        <BbAlertDialogFooter>
            <BbAlertDialogCancel>
                <BbButton Variant="ButtonVariant.Outline" Disabled="@_isDeleting">Cancel</BbButton>
            </BbAlertDialogCancel>
            <BbButton Variant="ButtonVariant.Destructive" OnClick="DeletePrompt" Loading="@_isDeleting">Delete</BbButton>
        </BbAlertDialogFooter>
    </BbAlertDialogContent>
</BbAlertDialog>

<style>
    .prompt-preview {
        background-color: var(--bg-secondary, #f8f9fa);
        padding: 0.5rem;
        border-radius: 4px;
        font-size: 0.8rem;
        max-height: 120px;
        overflow-y: auto;
        white-space: pre-wrap;
        word-wrap: break-word;
    }
</style>

@code {
    [Parameter] public required string ProjectId { get; set; }

    private IReadOnlyList<AgentPrompt> _prompts = [];
    private IReadOnlyList<AgentPrompt> _availableGlobalPrompts = [];
    private bool _showModal;
    private bool _showDeleteConfirmation;
    private bool _isSaving;
    private bool _isDeleting;
    private string? _modalError;
    private AgentPrompt? _editingPrompt;
    private AgentPrompt? _promptToDelete;

    // Modal form fields
    private string _modalName = string.Empty;
    private SessionMode _modalMode = SessionMode.Build;
    private string _modalMessage = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await RefreshPrompts();
    }

    private async Task RefreshPrompts()
    {
        _prompts = await AgentPromptApi.GetProjectPromptsAsync(ProjectId);
        _availableGlobalPrompts = await AgentPromptApi.GetAvailableGlobalPromptsAsync(ProjectId);
    }

    private void CopyFromGlobal(AgentPrompt globalPrompt)
    {
        _editingPrompt = null;
        _modalName = globalPrompt.Name;
        _modalMode = globalPrompt.Mode;
        _modalMessage = globalPrompt.InitialMessage ?? string.Empty;
        _modalError = null;
        _showModal = true;
    }

    private string TruncateMessage(string message)
    {
        const int maxLength = 200;
        if (message.Length <= maxLength)
            return message;
        return message[..maxLength] + "...";
    }

    private void ShowAddModal()
    {
        _editingPrompt = null;
        _modalName = string.Empty;
        _modalMode = SessionMode.Build;
        _modalMessage = string.Empty;
        _modalError = null;
        _showModal = true;
    }

    private void ShowEditModal(AgentPrompt prompt)
    {
        _editingPrompt = prompt;
        _modalName = prompt.Name;
        _modalMode = prompt.Mode;
        _modalMessage = prompt.InitialMessage ?? string.Empty;
        _modalError = null;
        _showModal = true;
    }

    private void HideModal()
    {
        _showModal = false;
        _editingPrompt = null;
        _modalError = null;
    }

    private async Task SavePrompt()
    {
        if (string.IsNullOrWhiteSpace(_modalName))
        {
            _modalError = "Name is required.";
            return;
        }

        _isSaving = true;
        _modalError = null;

        try
        {
            if (_editingPrompt == null)
            {
                await AgentPromptApi.CreatePromptAsync(
                    _modalName.Trim(),
                    string.IsNullOrWhiteSpace(_modalMessage) ? null : _modalMessage,
                    _modalMode,
                    ProjectId);
            }
            else
            {
                await AgentPromptApi.UpdatePromptAsync(
                    _editingPrompt.Id,
                    _modalName.Trim(),
                    string.IsNullOrWhiteSpace(_modalMessage) ? null : _modalMessage,
                    _modalMode);
            }

            await RefreshPrompts();
            HideModal();
        }
        catch (Exception ex)
        {
            _modalError = ex.Message;
        }
        finally
        {
            _isSaving = false;
        }
    }

    private void ShowDeleteConfirmation(AgentPrompt prompt)
    {
        _promptToDelete = prompt;
        _showDeleteConfirmation = true;
    }

    private void HideDeleteConfirmation()
    {
        _showDeleteConfirmation = false;
        _promptToDelete = null;
    }

    private async Task DeletePrompt()
    {
        if (_promptToDelete == null) return;

        _isDeleting = true;
        try
        {
            await AgentPromptApi.DeletePromptAsync(_promptToDelete.Id);
            await RefreshPrompts();
            HideDeleteConfirmation();
        }
        finally
        {
            _isDeleting = false;
        }
    }
}
