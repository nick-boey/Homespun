@*
    CloneManagementPanel depends on ICloneApi.
    This showcase provides a description and static examples.
*@

<BbCard>
    <BbCardHeader>
        <BbCardTitle>Component Overview</BbCardTitle>
    </BbCardHeader>
    <BbCardContent>
        <BbAlert Variant="AlertVariant.Info">
            <BbAlertDescription>
                <strong>CloneManagementPanel</strong> provides controls for managing git branch clones.
                Clones allow working on multiple branches simultaneously without switching.
            </BbAlertDescription>
        </BbAlert>
    </BbCardContent>
</BbCard>

<BbCard>
    <BbCardHeader>
        <BbCardTitle>Key Features</BbCardTitle>
    </BbCardHeader>
    <BbCardContent>
        <ul class="list-unstyled mb-0">
            <li class="mb-2">
                <BbBadge Class="bg-green-600 text-white border-transparent me-2">Create</BbBadge>
                Create new clones for branches
            </li>
            <li class="mb-2">
                <BbBadge Variant="BadgeVariant.Destructive" Class="me-2">Delete</BbBadge>
                Remove clones when no longer needed
            </li>
            <li class="mb-2">
                <BbBadge Class="bg-blue-500 text-white border-transparent me-2">List</BbBadge>
                View all active clones with their paths
            </li>
            <li class="mb-2">
                <BbBadge Class="bg-amber-500 text-white border-transparent me-2">Status</BbBadge>
                Show branch ahead/behind counts
            </li>
        </ul>
    </BbCardContent>
</BbCard>

<BbCard>
    <BbCardHeader>
        <BbCardTitle>Clone List Example</BbCardTitle>
        <BbCardDescription>Active clones</BbCardDescription>
    </BbCardHeader>
    <BbCardContent>
        <BbCard style="max-width: 500px;">
            <BbCardHeader><BbCardTitle>Branch Clones</BbCardTitle></BbCardHeader>
            <BbCardContent Class="p-0">
                <div class="list-group list-group-flush">
                    <div class="list-group-item d-flex justify-content-between align-items-start">
                        <div>
                            <div class="fw-semibold">feature/auth/login</div>
                            <small class="text-text-muted">/home/user/projects/app/.clones/feature-auth-login</small>
                            <div class="mt-1">
                                <BbBadge Class="bg-green-600 text-white border-transparent">2 ahead</BbBadge>
                                <BbBadge Class="bg-amber-500 text-white border-transparent ms-1">1 behind</BbBadge>
                            </div>
                        </div>
                        <BbButton Variant="ButtonVariant.Destructive" Size="ButtonSize.Small">Delete</BbButton>
                    </div>
                    <div class="list-group-item d-flex justify-content-between align-items-start">
                        <div>
                            <div class="fw-semibold">fix/api/timeout</div>
                            <small class="text-text-muted">/home/user/projects/app/.clones/fix-api-timeout</small>
                            <div class="mt-1">
                                <BbBadge Class="bg-green-600 text-white border-transparent">5 ahead</BbBadge>
                            </div>
                        </div>
                        <BbButton Variant="ButtonVariant.Destructive" Size="ButtonSize.Small">Delete</BbButton>
                    </div>
                </div>
            </BbCardContent>
            <BbCardFooter>
                <BbButton Size="ButtonSize.Small">Create Branch</BbButton>
            </BbCardFooter>
        </BbCard>
    </BbCardContent>
</BbCard>

