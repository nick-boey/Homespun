@using Microsoft.AspNetCore.SignalR.Client
@implements IAsyncDisposable

@inject HttpCloneApiService CloneApi
@inject HttpSessionApiService SessionStoreApi
@inject HttpSessionApiService SessionApi
@inject HttpPullRequestApiService GitHubApi
@inject HttpFleeceSyncApiService FleeceSyncApi
@inject HttpPullRequestApiService PullRequestApi
@inject HttpPullRequestApiService PullRequestWorkflowApi
@inject NavigationManager NavigationManager
@inject ILogger<CloneManagementPanel> Logger

<div class="clone-management-panel">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="mb-0">Branches</h4>
        <div class="btn-group">
            <BbButton Variant="ButtonVariant.Outline" Size="ButtonSize.Small" OnClick="RefreshDataAsync" Disabled="@_isLoading">
                @if (_isLoading)
                {
                    <BbSpinner Size="SpinnerSize.Small" Class="me-1" />
                }
                <LucideIcon Name="refresh-cw" Size="14" /> Refresh
            </BbButton>
            <BbButton Variant="ButtonVariant.Outline" Size="ButtonSize.Small" OnClick="FetchAllAsync" Disabled="@_isFetching">
                @if (_isFetching)
                {
                    <BbSpinner Size="SpinnerSize.Small" Class="me-1" />
                }
                <LucideIcon Name="cloud-download" Size="14" /> Fetch
            </BbButton>
            <BbButton Variant="ButtonVariant.Outline" Size="ButtonSize.Small" OnClick="PruneClonesAsync" Disabled="@_isPruning" title="Clean up stale clone references">
                @if (_isPruning)
                {
                    <BbSpinner Size="SpinnerSize.Small" Class="me-1" />
                }
                <LucideIcon Name="trash-2" Size="14" /> Prune
            </BbButton>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(_errorMessage))
    {
        <BbAlert Variant="AlertVariant.Danger" Dismissible OnDismiss="() => _errorMessage = null">
            <BbAlertDescription>@_errorMessage</BbAlertDescription>
        </BbAlert>
    }

    @if (!string.IsNullOrEmpty(_successMessage))
    {
        <BbAlert Variant="AlertVariant.Success" Dismissible OnDismiss="() => _successMessage = null">
            <BbAlertDescription>@_successMessage</BbAlertDescription>
        </BbAlert>
    }

    @* Active Branches Section *@
    <div class="section-header d-flex justify-content-between align-items-center">
        <span>Active Branches</span>
        <BbBadge Variant="BadgeVariant.Secondary">@_clones.Count(w => !w.IsBare)</BbBadge>
    </div>
    @if (_clones.Count(w => !w.IsBare) == 0)
    {
        <div class="text-muted p-3">No active branches</div>
    }
    else
    {
        <table class="table table-sm wt-table">
            <thead>
                <tr>
                    <th>Branch</th>
                    <th>Path</th>
                    <th>Status</th>
                    <th>Last Commit</th>
                    <th class="actions-col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var clone in _clones.Where(w => !w.IsBare))
                {
                    var branchName = GetShortBranchName(clone.Branch);
                    var branchInfo = _branches.FirstOrDefault(b => b.ShortName == branchName);
                    var session = GetSessionForClone(clone);
                    var prInfo = GetPullRequestForBranch(branchName);
                    var status = GetCloneStatus(clone.Path);
                    var deleteKey = $"clone:{branchName}";

                    <tr class="@(IsDeleteTarget(deleteKey) ? "table-danger" : "")">
                        <td>
                            <strong class="branch-name">@branchName</strong>
                            <span class="badges">
                                @if (IsDefaultBranch(branchName))
                                {
                                    <BbBadge Variant="BadgeVariant.Default">default</BbBadge>
                                }
                                @if (branchInfo?.IsMerged == true)
                                {
                                    <BbBadge Class="bg-green-600 text-white border-transparent">merged</BbBadge>
                                }
                                @if (prInfo != null)
                                {
                                    <a href="https://github.com/@Project.GitHubOwner/@Project.GitHubRepo/pull/@prInfo.GitHubPRNumber"
                                       target="_blank"
                                       style="text-decoration: none;">
                                        <BbBadge Class="bg-blue-500 text-white border-transparent">
                                            PR #@prInfo.GitHubPRNumber
                                        </BbBadge>
                                    </a>
                                }
                                @if (!clone.IsOnCorrectBranch)
                                {
                                    <BbBadge Variant="BadgeVariant.Destructive" title="@($"Expected branch: {clone.ExpectedBranch}")">
                                        Wrong Branch
                                    </BbBadge>
                                }
                                @if (status != null && status.HasChanges)
                                {
                                    @if (status.ModifiedCount > 0)
                                    {
                                        <BbBadge Class="bg-amber-500 text-white border-transparent" title="Modified files">M: @status.ModifiedCount</BbBadge>
                                    }
                                    @if (status.StagedCount > 0)
                                    {
                                        <BbBadge Class="bg-green-600 text-white border-transparent" title="Staged files">S: @status.StagedCount</BbBadge>
                                    }
                                    @if (status.UntrackedCount > 0)
                                    {
                                        <BbBadge Variant="BadgeVariant.Secondary" title="Untracked files">U: @status.UntrackedCount</BbBadge>
                                    }
                                }
                            </span>
                        </td>
                        <td><code class="clone-path">@clone.Path</code></td>
                        <td class="status-col">
                            @if (session != null)
                            {
                                <BbBadge Class="@GetSessionStatusBadgeClass(session.Status)">
                                    @session.Status
                                </BbBadge>
                            }
                            @if (false) @* StartupTracker not available in WASM *@
                            {
                                <BbBadge Class="bg-amber-500 text-white border-transparent">
                                    <BbSpinner Size="SpinnerSize.Small" Class="me-1" />
                                    Starting...
                                </BbBadge>
                            }
                            @if (branchInfo != null && (branchInfo.AheadCount > 0 || branchInfo.BehindCount > 0))
                            {
                                <span class="sync-info">
                                    @if (branchInfo.AheadCount > 0)
                                    {
                                        <span class="text-success">+@branchInfo.AheadCount</span>
                                    }
                                    @if (branchInfo.BehindCount > 0)
                                    {
                                        <span class="text-danger">-@branchInfo.BehindCount</span>
                                    }
                                </span>
                            }
                        </td>
                        <td class="commit-col">
                            @if (!string.IsNullOrEmpty(branchInfo?.LastCommitMessage))
                            {
                                <span class="commit-message" title="@branchInfo.LastCommitMessage">@TruncateMessage(branchInfo.LastCommitMessage)</span>
                            }
                        </td>
                        <td class="actions-col">
                            @if (!IsDeleteTarget(deleteKey))
                            {
                                @if (IsDefaultBranch(branchName))
                                {
                                    @if (session != null)
                                    {
                                        <BbButton Variant="ButtonVariant.Default" Size="ButtonSize.Small" Class="me-1" Href="@($"/session/{session.Id}")" title="Open chat">
                                            Chat
                                        </BbButton>
                                        <BbButton Variant="ButtonVariant.Destructive" Size="ButtonSize.Small" Class="me-1"
                                                OnClick="() => StopSessionAsync(session)"
                                                Disabled="@_operationInProgress"
                                                title="Stop session">
                                            Stop
                                        </BbButton>
                                    }
                                    else @* StartupTracker not available in WASM *@
                                    {
                                        <BbButton Variant="ButtonVariant.Default" Size="ButtonSize.Small" Class="me-1"
                                                OnClick="() => StartMainBranchSessionAsync(clone)"
                                                Disabled="@_operationInProgress"
                                                title="Start a new agent session on the main branch">
                                            <LucideIcon Name="bot" Size="14" Class="me-1" />Run Agent
                                        </BbButton>
                                    }

                                    @if (branchInfo?.BehindCount > 0)
                                    {
                                        <BbButton Variant="ButtonVariant.Secondary" Size="ButtonSize.Small"
                                                OnClick="() => UpdateMainBranchAsync(clone)"
                                                Disabled="@(_operationInProgress || _isUpdatingMain)"
                                                title="@($"Pull latest changes and sync fleece issues ({branchInfo?.BehindCount} commits behind)")">
                                            @if (_isUpdatingMain)
                                            {
                                                <BbSpinner Size="SpinnerSize.Small" Class="me-1" />
                                            }
                                            <LucideIcon Name="cloud-download" Size="14" Class="me-1" />Update
                                        </BbButton>
                                    }
                                }
                                else
                                {
                                    @if (!clone.IsOnCorrectBranch)
                                    {
                                        <BbButton Variant="ButtonVariant.Secondary" Size="ButtonSize.Small" Class="me-1"
                                                OnClick="() => FixBranchAsync(clone)"
                                                Disabled="@_operationInProgress"
                                                title="@($"Checkout the correct branch: {clone.ExpectedBranch}")">
                                            Fix Branch
                                        </BbButton>
                                    }

                                    <AgentControlPanel
                                        EntityId="@GetCloneEntityId(clone)"
                                        ClonePath="@clone.Path"
                                        ProjectId="@Project.Id"
                                        Model="@(Project.DefaultModel ?? "opus")"
                                        SystemPrompt="@($"You are working on branch: {branchName}")"
                                        BranchName="@branchName"
                                        Compact="true"
                                        Disabled="@_operationInProgress" />

                                    @if (branchInfo?.BehindCount > 0)
                                    {
                                        <BbButton Variant="ButtonVariant.Outline" Size="ButtonSize.Small" Class="me-1"
                                                OnClick="() => PullLatestAsync(clone)"
                                                Disabled="@_operationInProgress"
                                                title="Pull latest changes">
                                            Pull
                                        </BbButton>
                                        <BbButton Variant="ButtonVariant.Secondary" Size="ButtonSize.Small" Class="me-1"
                                                OnClick="() => StartRebaseAgentAsync(clone)"
                                                Disabled="@(_operationInProgress || session != null)"
                                                title="@($"Start rebase agent to rebase onto {Project.DefaultBranch}")">
                                            <LucideIcon Name="refresh-cw" Size="14" /> Rebase
                                        </BbButton>
                                    }

                                    <BbButton Variant="ButtonVariant.Destructive" Size="ButtonSize.Small"
                                            OnClick="() => ShowDeleteCloneConfirmation(clone, branchInfo)"
                                            Disabled="@_operationInProgress"
                                            title="Delete clone">
                                        Delete
                                    </BbButton>
                                }
                            }
                            else
                            {
                                @* Inline delete confirmation *@
                                <div class="inline-confirm">
                                    <div class="inline-confirm-options">
                                        @if (_deleteIncludesClone)
                                        {
                                            <div class="flex items-center gap-1">
                                                <BbCheckbox @bind-Checked="_deleteCloneOnly" Id="keep-branch" />
                                                <BbLabel For="keep-branch" Class="text-sm mb-0">Keep branch</BbLabel>
                                            </div>
                                        }
                                        @if (_hasRemoteBranch && !_deleteCloneOnly)
                                        {
                                            <div class="flex items-center gap-1">
                                                <BbCheckbox @bind-Checked="_deleteRemoteBranch" Id="delete-remote" />
                                                <BbLabel For="delete-remote" Class="text-sm mb-0">Delete remote</BbLabel>
                                            </div>
                                        }
                                    </div>
                                    <div class="inline-confirm-actions">
                                        @if (!_deleteTargetIsMerged)
                                        {
                                            <BbBadge Class="bg-amber-500 text-white border-transparent me-1" title="This branch has not been merged">unmerged</BbBadge>
                                        }
                                        <BbButton Variant="ButtonVariant.Destructive" Size="ButtonSize.Small" Class="me-1"
                                                OnClick="ExecuteDeleteAsync"
                                                Disabled="@_operationInProgress">
                                            @if (_operationInProgress)
                                            {
                                                <BbSpinner Size="SpinnerSize.Small" Class="me-1" />
                                            }
                                            Confirm
                                        </BbButton>
                                        <BbButton Variant="ButtonVariant.Outline" Size="ButtonSize.Small"
                                                OnClick="HideDeleteConfirmation">
                                            Cancel
                                        </BbButton>
                                    </div>
                                </div>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    @* Lost Clones Section *@
    @if (_lostClones.Any())
    {
        <div class="section-header d-flex justify-content-between align-items-center bg-warning bg-opacity-25">
            <span><LucideIcon Name="alert-triangle" Size="14" Class="me-1" /> Lost Clones</span>
            <BbBadge Class="bg-amber-500 text-white border-transparent">@_lostClones.Count</BbBadge>
        </div>
        <table class="table table-sm wt-table">
            <thead>
                <tr>
                    <th>Folder</th>
                    <th>Path</th>
                    <th>Status</th>
                    <th class="actions-col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var lost in _lostClones)
                {
                    var deleteKey = $"lost:{lost.FolderName}";

                    <tr class="@(IsDeleteTarget(deleteKey) ? "table-danger" : "")">
                        <td>
                            <strong class="branch-name">@lost.FolderName</strong>
                            <span class="badges">
                                <BbBadge Class="bg-amber-500 text-white border-transparent">Lost</BbBadge>
                                @if (lost.CanRepair)
                                {
                                    <BbBadge Class="bg-blue-500 text-white border-transparent" title="@($"Can be repaired to branch: {lost.MatchingBranchName}")">
                                        <LucideIcon Name="arrow-right" Size="10" /> @lost.MatchingBranchName
                                    </BbBadge>
                                }
                                @if (lost.Status != null && lost.Status.HasChanges)
                                {
                                    @if (lost.Status.ModifiedCount > 0)
                                    {
                                        <BbBadge Variant="BadgeVariant.Destructive" title="Modified files - may lose work!">M: @lost.Status.ModifiedCount</BbBadge>
                                    }
                                    @if (lost.Status.StagedCount > 0)
                                    {
                                        <BbBadge Class="bg-green-600 text-white border-transparent" title="Staged files">S: @lost.Status.StagedCount</BbBadge>
                                    }
                                    @if (lost.Status.UntrackedCount > 0)
                                    {
                                        <BbBadge Variant="BadgeVariant.Secondary" title="Untracked files">U: @lost.Status.UntrackedCount</BbBadge>
                                    }
                                }
                            </span>
                        </td>
                        <td><code class="clone-path">@lost.Path</code></td>
                        <td class="status-col">
                            @if (lost.Status != null && lost.Status.HasChanges)
                            {
                                <BbBadge Variant="BadgeVariant.Destructive">Has changes</BbBadge>
                            }
                        </td>
                        <td class="actions-col">
                            @if (!IsDeleteTarget(deleteKey))
                            {
                                @if (lost.CanRepair)
                                {
                                    <BbButton Variant="ButtonVariant.Default" Size="ButtonSize.Small" Class="me-1"
                                            OnClick="() => RepairLostCloneAsync(lost)"
                                            Disabled="@_operationInProgress"
                                            title="@($"Reattach to branch {lost.MatchingBranchName}")">
                                        Repair
                                    </BbButton>
                                }
                                <BbButton Variant="ButtonVariant.Destructive" Size="ButtonSize.Small"
                                        OnClick="() => ShowDeleteLostCloneConfirmation(lost)"
                                        Disabled="@_operationInProgress"
                                        title="Delete folder permanently">
                                    Delete
                                </BbButton>
                            }
                            else
                            {
                                @* Inline delete confirmation for lost clones *@
                                <div class="inline-confirm">
                                    <div class="inline-confirm-actions">
                                        @if (_deleteLostCloneHasChanges)
                                        {
                                            <BbBadge Variant="BadgeVariant.Destructive" Class="me-1" title="Has uncommitted changes">has changes</BbBadge>
                                        }
                                        <BbButton Variant="ButtonVariant.Destructive" Size="ButtonSize.Small" Class="me-1"
                                                OnClick="ExecuteDeleteAsync"
                                                Disabled="@_operationInProgress">
                                            @if (_operationInProgress)
                                            {
                                                <BbSpinner Size="SpinnerSize.Small" Class="me-1" />
                                            }
                                            Confirm
                                        </BbButton>
                                        <BbButton Variant="ButtonVariant.Outline" Size="ButtonSize.Small"
                                                OnClick="HideDeleteConfirmation">
                                            Cancel
                                        </BbButton>
                                    </div>
                                </div>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    @* Local Branches Without Clones *@
    @{
        var branchesWithoutClones = _branches.Where(b => !b.HasClone && !IsDefaultBranch(b.ShortName)).ToList();
    }
    @if (branchesWithoutClones.Any())
    {
        <div class="section-header d-flex justify-content-between align-items-center">
            <span>Local Branches (No Clone)</span>
            <BbBadge Variant="BadgeVariant.Secondary">@branchesWithoutClones.Count</BbBadge>
        </div>
        <table class="table table-sm wt-table">
            <thead>
                <tr>
                    <th>Branch</th>
                    <th>Last Commit</th>
                    <th class="actions-col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var branch in branchesWithoutClones)
                {
                    var prInfo = GetPullRequestForBranch(branch.ShortName);
                    var deleteKey = $"branch:{branch.ShortName}";

                    <tr class="@(IsDeleteTarget(deleteKey) ? "table-danger" : "")">
                        <td>
                            <strong class="branch-name">@branch.ShortName</strong>
                            <span class="badges">
                                @if (branch.IsMerged)
                                {
                                    <BbBadge Class="bg-green-600 text-white border-transparent">merged</BbBadge>
                                }
                                @if (prInfo != null)
                                {
                                    <a href="https://github.com/@Project.GitHubOwner/@Project.GitHubRepo/pull/@prInfo.GitHubPRNumber"
                                       target="_blank"
                                       style="text-decoration: none;">
                                        <BbBadge Class="bg-blue-500 text-white border-transparent">
                                            PR #@prInfo.GitHubPRNumber
                                        </BbBadge>
                                    </a>
                                }
                            </span>
                        </td>
                        <td class="commit-col">
                            @if (!string.IsNullOrEmpty(branch.LastCommitMessage))
                            {
                                <span class="commit-message" title="@branch.LastCommitMessage">@TruncateMessage(branch.LastCommitMessage)</span>
                            }
                        </td>
                        <td class="actions-col">
                            @if (!IsDeleteTarget(deleteKey))
                            {
                                <BbButton Variant="ButtonVariant.Default" Size="ButtonSize.Small" Class="me-1"
                                        OnClick="() => CreateCloneForBranchAsync(branch.ShortName)"
                                        Disabled="@_operationInProgress"
                                        title="Create branch clone">
                                    Start
                                </BbButton>
                                <BbButton Variant="ButtonVariant.Destructive" Size="ButtonSize.Small"
                                        OnClick="() => ShowDeleteBranchConfirmation(branch)"
                                        Disabled="@_operationInProgress"
                                        title="Delete branch">
                                    Delete
                                </BbButton>
                            }
                            else
                            {
                                @* Inline delete confirmation *@
                                <div class="inline-confirm">
                                    <div class="inline-confirm-options">
                                        @if (_hasRemoteBranch)
                                        {
                                            <div class="flex items-center gap-1">
                                                <BbCheckbox @bind-Checked="_deleteRemoteBranch" Id="delete-remote-2" />
                                                <BbLabel For="delete-remote-2" Class="text-sm mb-0">Delete remote</BbLabel>
                                            </div>
                                        }
                                    </div>
                                    <div class="inline-confirm-actions">
                                        @if (!_deleteTargetIsMerged)
                                        {
                                            <BbBadge Class="bg-amber-500 text-white border-transparent me-1" title="This branch has not been merged">unmerged</BbBadge>
                                        }
                                        <BbButton Variant="ButtonVariant.Destructive" Size="ButtonSize.Small" Class="me-1"
                                                OnClick="ExecuteDeleteAsync"
                                                Disabled="@_operationInProgress">
                                            @if (_operationInProgress)
                                            {
                                                <BbSpinner Size="SpinnerSize.Small" Class="me-1" />
                                            }
                                            Confirm
                                        </BbButton>
                                        <BbButton Variant="ButtonVariant.Outline" Size="ButtonSize.Small"
                                                OnClick="HideDeleteConfirmation">
                                            Cancel
                                        </BbButton>
                                    </div>
                                </div>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    @* Remote Branches Section *@
    @if (_remoteBranches.Any())
    {
        <div class="section-header d-flex justify-content-between align-items-center">
            <span>Remote Branches (Not Local)</span>
            <BbBadge Variant="BadgeVariant.Secondary">@_remoteBranches.Count</BbBadge>
        </div>
        <table class="table table-sm wt-table">
            <thead>
                <tr>
                    <th>Branch</th>
                    <th class="actions-col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var remoteBranch in _remoteBranches)
                {
                    <tr>
                        <td><strong class="branch-name">origin/@remoteBranch</strong></td>
                        <td class="actions-col">
                            <BbButton Variant="ButtonVariant.Default" Size="ButtonSize.Small" Class="me-1"
                                    OnClick="() => CreateCloneFromRemoteAsync(remoteBranch)"
                                    Disabled="@_operationInProgress"
                                    title="Create local clone from remote branch">
                                Checkout
                            </BbButton>
                            <BbButton Variant="ButtonVariant.Destructive" Size="ButtonSize.Small"
                                    OnClick="() => DeleteRemoteBranchAsync(remoteBranch)"
                                    Disabled="@_operationInProgress"
                                    title="Delete remote branch">
                                Delete
                            </BbButton>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

