    </BbCardHeader>
    <BbCardContent>
        <PrStatusBadges Status="@_conflictStatus" />
    </BbCardContent>
</BbCard>

<BbCard>
    <BbCardHeader>
        <BbCardTitle>Merged</BbCardTitle>
        <BbCardDescription>PR that has been merged</BbCardDescription>
    </BbCardHeader>
    <BbCardContent>
        <PrStatusBadges Status="@_mergedStatus" />
    </BbCardContent>
</BbCard>

<BbCard>
    <BbCardHeader>
        <BbCardTitle>Closed</BbCardTitle>
        <BbCardDescription>PR closed without merging</BbCardDescription>
    </BbCardHeader>
    <BbCardContent>
        <PrStatusBadges Status="@_closedStatus" />
    </BbCardContent>
</BbCard>

