    </BbCardHeader>
    <BbCardContent>
        <PrStatusBadges Status="@_readyToMergeStatus" />
    </BbCardContent>
</BbCard>

<BbCard>
    <BbCardHeader>
        <BbCardTitle>Merge Conflicts</BbCardTitle>
