<BbCard>
    <BbCardHeader>
        <BbCardTitle>In Progress</BbCardTitle>
        <BbCardDescription>PR with checks running</BbCardDescription>
    </BbCardHeader>
    <BbCardContent>
        <PrStatusBadges Status="@_inProgressStatus" />
    </BbCardContent>
</BbCard>

<BbCard>
    <BbCardHeader>
        <BbCardTitle>Ready for Review</BbCardTitle>
        <BbCardDescription>PR awaiting review with passing checks</BbCardDescription>
    </BbCardHeader>
    <BbCardContent>
