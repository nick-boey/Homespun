                    <BbBadge Variant="BadgeVariant.Default" Class="ms-1">Progress</BbBadge>
                    <BbBadge Class="bg-amber-500 text-white border-transparent ms-1">P1</BbBadge>
                </div>
                <p class="text-text-secondary text-sm">Add login and registration functionality with JWT tokens.</p>
                <dl class="grid grid-cols-12 text-sm">
                    <dt class="col-span-4">Branch Preview</dt>
                    <dd class="col-span-8"><code>feature/auth/login</code></dd>
                </dl>
            </BbCardContent>
            <BbCardFooter>
                <MockAgentSelector />
            </BbCardFooter>
        </BbCard>
    </BbCardContent>
</BbCard>

