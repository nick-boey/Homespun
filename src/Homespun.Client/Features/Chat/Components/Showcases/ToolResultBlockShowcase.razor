        <ToolResultBlock Text="File successfully written to /src/components/Button.tsx" />
    </BbCardContent>
</BbCard>

<BbCard>
    <BbCardHeader>
        <BbCardTitle>Error Result</BbCardTitle>
        <BbCardDescription>Error output from a failed command</BbCardDescription>
    </BbCardHeader>
    <BbCardContent>
        <ToolResultBlock Text="@_errorOutput" />
    </BbCardContent>
</BbCard>

<BbCard>
    <BbCardHeader>
        <BbCardTitle>Search Results</BbCardTitle>
        <BbCardDescription>Result from a grep/search operation</BbCardDescription>
    </BbCardHeader>
    <BbCardContent>
        <ToolResultBlock Text="@_searchResults" />
    </BbCardContent>
</BbCard>

