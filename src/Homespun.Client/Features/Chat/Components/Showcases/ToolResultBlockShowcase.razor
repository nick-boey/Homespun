<BbCard>
    <BbCardHeader>
        <BbCardTitle>File Content Result</BbCardTitle>
        <BbCardDescription>Result from reading a file</BbCardDescription>
    </BbCardHeader>
    <BbCardContent>
        <ToolResultBlock Text="@_fileContent" />
    </BbCardContent>
</BbCard>

<BbCard>
    <BbCardHeader>
        <BbCardTitle>Command Output</BbCardTitle>
        <BbCardDescription>Result from a bash command</BbCardDescription>
    </BbCardHeader>
    <BbCardContent>
        <ToolResultBlock Text="@_commandOutput" />
    </BbCardContent>
</BbCard>

<BbCard>
    <BbCardHeader>
        <BbCardTitle>Short Result</BbCardTitle>
        <BbCardDescription>Simple success message</BbCardDescription>
    </BbCardHeader>
