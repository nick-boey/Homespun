<BbCard>
    <BbCardHeader>
        <BbCardTitle>Text Content Block</BbCardTitle>
        <BbCardDescription>Renders text with the TextBlock component</BbCardDescription>
    </BbCardHeader>
    <BbCardContent>
        <ContentBlock Content="_textContent" />
    </BbCardContent>
</BbCard>

<BbCard>
    <BbCardHeader>
        <BbCardTitle>Thinking Content Block</BbCardTitle>
        <BbCardDescription>Renders thinking with the ThinkingBlock component</BbCardDescription>
    </BbCardHeader>
    <BbCardContent>
        <ContentBlock Content="_thinkingContent" />
    </BbCardContent>
</BbCard>

<BbCard>
    <BbCardHeader>
        <BbCardTitle>Tool Use Content Block</BbCardTitle>
        <BbCardDescription>Renders tool invocation with the ToolUseBlock component</BbCardDescription>
    </BbCardHeader>
    <BbCardContent>
        <ContentBlock Content="_toolUseContent" />
    </BbCardContent>
</BbCard>

<BbCard>
    <BbCardHeader>
        <BbCardTitle>Tool Result Content Block</BbCardTitle>
