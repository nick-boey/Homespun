    </BbCardHeader>
    <BbCardContent>
        <ContentBlock Content="_toolResultContent" />
    </BbCardContent>
</BbCard>

<BbCard>
    <BbCardHeader>
        <BbCardTitle>Streaming Content Block</BbCardTitle>
        <BbCardDescription>Content currently being streamed</BbCardDescription>
    </BbCardHeader>
    <BbCardContent>
        <ContentBlock Content="_streamingContent" />
    </BbCardContent>
</BbCard>

@code {
    private ClaudeMessageContent _textContent = new()
    {
        Type = ClaudeContentType.Text,
        Text = "I'll help you implement the login form with validation."
    };

    private ClaudeMessageContent _thinkingContent = new()
    {
        Type = ClaudeContentType.Thinking,
        Text = "I need to check the existing form structure before making changes.",
        Thinking = "I need to check the existing form structure before making changes."
    };

    private ClaudeMessageContent _toolUseContent = new()
    {
        Type = ClaudeContentType.ToolUse,
        ToolName = "Read",
        ToolInput = """{"file_path": "/src/components/LoginForm.tsx"}""",
        ToolUseId = "tool_123"
    };

    private ClaudeMessageContent _toolResultContent = new()
    {
        Type = ClaudeContentType.ToolResult,
        Text = "export const LoginForm = () => { return <form>...</form>; }",
        ToolUseId = "tool_123",
