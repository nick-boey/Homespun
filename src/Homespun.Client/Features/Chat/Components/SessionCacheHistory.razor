@inject HttpSessionApiService SessionApi
@inject NavigationManager NavigationManager

@if (_isLoading)
{
    <div class="flex justify-center py-3">
        <BbSpinner Size="SpinnerSize.Small" />
    </div>
}
else if (_sessions.Count > 0)
{
    <div class="session-cache-history mt-3 @(ShowBorder ? "border-t pt-3" : "")">
        <h6 class="text-muted-foreground text-sm mb-2">
            <LucideIcon Name="history" Size="14" Class="mr-1" />
            Session History
            <BbBadge Variant="BadgeVariant.Secondary" Class="ml-1">@_sessions.Count</BbBadge>
        </h6>
        <div class="flex flex-col">
            @foreach (var session in _sessions)
            {
                <div class="flex justify-between items-center py-2">
                    <div class="flex items-center gap-2">
                        @if (session.Mode.HasValue)
                        {
                            <BbBadge Class="@(session.Mode == SessionMode.Plan ? "bg-blue-500 text-white border-transparent" : "bg-green-600 text-white border-transparent")">
                                @session.Mode
                            </BbBadge>
                        }
                        else
                        {
                            <BbBadge Variant="BadgeVariant.Secondary">Unknown</BbBadge>
                        }
                        <small class="text-muted-foreground" title="@session.CreatedAt.ToLocalTime().ToString("g")">
                            @FormatDate(session.LastMessageAt)
                        </small>
                        <small class="text-muted-foreground">
                            (@session.MessageCount msgs)
                        </small>
                    </div>
                    <div class="flex gap-1">
                        <BbButton Variant="ButtonVariant.Outline" Size="ButtonSize.Small"
                                OnClick="() => ViewArchivedSession(session.SessionId)"
                                title="View messages">
                            <LucideIcon Name="eye" Size="14" />
                        </BbButton>
                        <BbButton Variant="ButtonVariant.Default" Size="ButtonSize.Small"
                                OnClick="() => ResumeSession(session)"
                                Disabled="@_isResuming"
                                title="Resume session">
                            @if (_resumingSessionId == session.SessionId)
                            {
                                <BbSpinner Size="SpinnerSize.Small" />
                            }
                            else
                            {
                                <LucideIcon Name="play" Size="14" />
                            }
                        </BbButton>
                    </div>
                </div>
            }
        </div>
    </div>
}
else if (ShowEmptyState)
{
    <div class="text-muted-foreground text-sm py-2">
        <LucideIcon Name="info" Size="14" Class="mr-1" />
        No previous sessions found for this entity.
    </div>
}

@if (!string.IsNullOrEmpty(_errorMessage))
{
    <BbAlert Variant="AlertVariant.Danger" Class="mt-2">
        <BbAlertDescription>@_errorMessage</BbAlertDescription>
    </BbAlert>
}

@code {
    [Parameter] public required string EntityId { get; set; }
    [Parameter] public required string ProjectId { get; set; }
    [Parameter] public string? WorkingDirectory { get; set; }
    [Parameter] public bool ShowBorder { get; set; } = true;
    [Parameter] public bool ShowEmptyState { get; set; } = false;
    [Parameter] public bool Collapsible { get; set; } = false;

    private IReadOnlyList<SessionCacheSummary> _sessions = [];
    private bool _isLoading = true;
    private bool _isResuming;
    private string? _resumingSessionId;
    private string? _errorMessage;

    protected override async Task OnParametersSetAsync()
    {
        if (!string.IsNullOrEmpty(ProjectId) && !string.IsNullOrEmpty(EntityId))
        {
            await LoadSessionsAsync();
        }
        else
        {
            _sessions = [];
            _isLoading = false;
        }
    }

    private async Task LoadSessionsAsync()
    {
        _isLoading = true;
        _errorMessage = null;
        StateHasChanged();

        try
        {
            _sessions = await SessionApi.GetSessionHistoryAsync(ProjectId, EntityId);
        }
        catch (Exception ex)
        {
            _errorMessage = $"Failed to load session history: {ex.Message}";
            _sessions = [];
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void ViewArchivedSession(string sessionId)
    {
        NavigationManager.NavigateTo($"/session/{sessionId}/archived");
    }

    private async Task ResumeSession(SessionCacheSummary session)
    {
        if (string.IsNullOrEmpty(WorkingDirectory))
        {
            _errorMessage = "Working directory is required to resume sessions.";
            return;
        }

        _isResuming = true;
        _resumingSessionId = session.SessionId;
        _errorMessage = null;
        StateHasChanged();

        try
        {
            var newSession = await SessionApi.ResumeSessionAsync(
                session.SessionId,
                EntityId,
                ProjectId,
                WorkingDirectory);

            NavigationManager.NavigateTo($"/session/{newSession.Id}");
        }
        catch (Exception ex)
        {
            _errorMessage = $"Failed to resume session: {ex.Message}";
        }
        finally
        {
            _isResuming = false;
            _resumingSessionId = null;
        }
    }

    private static string FormatDate(DateTime date)
    {
        var local = date.ToLocalTime();
        var now = DateTime.Now;

        if (local.Date == now.Date)
        {
            return $"Today {local:HH:mm}";
        }
        if (local.Date == now.Date.AddDays(-1))
        {
            return $"Yesterday {local:HH:mm}";
        }
        if (local > now.AddDays(-7))
        {
            return local.ToString("ddd HH:mm");
        }
        return local.ToString("MMM d, HH:mm");
    }
}
