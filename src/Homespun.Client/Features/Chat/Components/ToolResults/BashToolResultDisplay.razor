
<div class="bash-result @(Data.IsError ? "error" : "")">
    @if (!string.IsNullOrEmpty(Data.Command))
    {
        <div class="command-line">
            <span class="prompt">$</span>
            <code>@Data.Command</code>
        </div>
    }
    <pre class="output @(Data.IsError ? "error-output" : "")">@Data.Output</pre>
    @if (Data.ExitCode.HasValue && Data.ExitCode != 0)
    {
        <div class="exit-code">Exit code: @Data.ExitCode</div>
    }
</div>

<style>
    .bash-result {
        font-family: var(--font-mono, monospace);
        font-size: 0.75rem;
    }

    .bash-result.error {
        border-left: 3px solid #ef4444;
        padding-left: var(--spacing-sm);
    }

    .command-line {
        display: flex;
        align-items: baseline;
        gap: var(--spacing-sm);
        padding: var(--spacing-xs) 0;
    }

    .command-line .prompt {
        color: var(--text-muted);
        flex-shrink: 0;
        user-select: none;
    }

    .command-line code {
        color: var(--text-primary);
        word-break: break-all;
    }

    .bash-result .output {
        margin: 0;
        white-space: pre-wrap;
        word-break: break-all;
        color: var(--text-muted);
        max-height: 300px;
        overflow-y: auto;
        padding: var(--spacing-xs) 0;
    }

    .bash-result .error-output {
        color: #ef4444;
    }

    .exit-code {
        margin-top: var(--spacing-xs);
        font-size: 0.6875rem;
        color: #ef4444;
        font-weight: 600;
    }
</style>

@code {
    [Parameter]
    public required BashToolData Data { get; set; }
}
