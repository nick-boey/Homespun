
<div class="grep-result">
    @if (!string.IsNullOrEmpty(Data.Pattern))
    {
        <div class="search-pattern">
            <span class="label">Pattern:</span>
            <code>@Data.Pattern</code>
        </div>
    }
    <div class="match-count">
        Found @Data.TotalMatches match@(Data.TotalMatches == 1 ? "" : "es")
    </div>
    @if (Data.Matches.Count > 0)
    {
        <div class="matches-list">
            @foreach (var match in Data.Matches.Take(50))
            {
                <div class="match-item">
                    <span class="match-file">@match.FilePath</span>
                    @if (match.LineNumber.HasValue)
                    {
                        <span class="match-line">:@match.LineNumber</span>
                    }
                    @if (!string.IsNullOrEmpty(match.Content))
                    {
                        <span class="match-content">@match.Content</span>
                    }
                </div>
            }
            @if (Data.Matches.Count > 50)
            {
                <div class="more-matches">
                    ... and @(Data.Matches.Count - 50) more matches
                </div>
            }
        </div>
    }
</div>

<style>
    .grep-result {
        font-family: var(--font-mono, monospace);
        font-size: 0.75rem;
    }

    .search-pattern {
        display: flex;
        align-items: baseline;
        gap: var(--spacing-sm);
        margin-bottom: var(--spacing-xs);
    }

    .search-pattern .label {
        color: var(--text-muted);
        font-size: 0.6875rem;
        flex-shrink: 0;
    }

    .search-pattern code {
        color: var(--text-primary);
        background: var(--code-bg);
        padding: 1px 4px;
        border-radius: var(--radius-sm);
    }

    .match-count {
        color: var(--text-muted);
        font-size: 0.6875rem;
        margin-bottom: var(--spacing-sm);
    }

    .matches-list {
        max-height: 250px;
        overflow-y: auto;
    }

    .match-item {
        display: flex;
        align-items: baseline;
        gap: 2px;
        padding: 1px 0;
        line-height: 1.4;
    }

    .match-file {
        color: #3b82f6;
        flex-shrink: 0;
    }

    .match-line {
        color: var(--text-muted);
        flex-shrink: 0;
    }

    .match-content {
        color: var(--text-primary);
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        margin-left: var(--spacing-sm);
    }

    .more-matches {
        color: var(--text-muted);
        font-style: italic;
        padding-top: var(--spacing-xs);
        font-size: 0.6875rem;
    }
</style>

@code {
    [Parameter]
    public required GrepToolData Data { get; set; }
}
