@page "/settings"
@inject HttpGitHubInfoApiService GitHubInfoApi
@inject IBreadcrumbService BreadcrumbService
@inject IJSRuntime JSRuntime

<PageTitle>Settings - Homespun</PageTitle>

<h1>Settings</h1>

<div class="settings-container">
    <section class="settings-section">
        <h2>Appearance</h2>
        <p class="text-text-muted">Customize the look and feel of the application.</p>

        <div class="appearance-card">
            <h4>Theme</h4>
            <div class="theme-selector">
                <button class="theme-option @(_currentTheme == "auto" ? "active" : "")"
                        @onclick='() => SetTheme("auto")'
                        title="Use system preference">
                    <LucideIcon Name="sun-moon" Size="20" />
                    <span>Auto</span>
                </button>
                <button class="theme-option @(_currentTheme == "light" ? "active" : "")"
                        @onclick='() => SetTheme("light")'
                        title="Light mode">
                    <LucideIcon Name="sun" Size="20" />
                    <span>Light</span>
                </button>
                <button class="theme-option @(_currentTheme == "dark" ? "active" : "")"
                        @onclick='() => SetTheme("dark")'
                        title="Dark mode">
                    <LucideIcon Name="moon" Size="20" />
                    <span>Dark</span>
                </button>
            </div>
        </div>
    </section>

    <section class="settings-section">
        <h2>GitHub Authentication</h2>
        <p class="text-text-muted">Authentication status for agents pushing code and creating PRs.</p>

        <div class="auth-status-card">
            @if (_isLoading)
            {
                <div class="flex items-center gap-2">
                    <BbSpinner Size="SpinnerSize.Small" />
                    <span>Checking authentication status...</span>
                </div>
            }
            else
            {
                <div class="status-header">
                    @if (_authStatus?.IsAuthenticated == true)
                    {
                        <span class="status-badge status-ok">
                            <LucideIcon Name="check-circle" Size="16" />
                            Authenticated
                        </span>
                    }
                    else
                    {
                        <span class="status-badge status-error">
                            <LucideIcon Name="x-circle" Size="16" />
                            Not Authenticated
                        </span>
                    }
                </div>

                <dl class="auth-details">
                    <dt>Token Configured</dt>
                    <dd>
                        @if (_githubStatus?.IsConfigured == true)
                        {
                            <span class="text-success">Yes</span>
                        }
                        else
                        {
                            <span class="text-danger">No</span>
                        }
                    </dd>

                    <dt>Token (masked)</dt>
                    <dd><code>@(_githubStatus?.MaskedToken ?? "Not set")</code></dd>

                    @if (_authStatus?.Username != null)
                    {
                        <dt>GitHub User</dt>
                        <dd>@_authStatus.Username</dd>
                    }

                    @if (_authStatus?.Message != null)
                    {
                        <dt>Status</dt>
                        <dd>@_authStatus.Message</dd>
                    }

                    <dt>Auth Method</dt>
                    <dd>@FormatAuthMethod(_authStatus?.AuthMethod ?? GitHubAuthMethod.None)</dd>

                    @if (_authStatus?.ErrorMessage != null)
                    {
                        <dt>Error</dt>
                        <dd class="text-danger">@_authStatus.ErrorMessage</dd>
                    }
                </dl>

                <BbButton OnClick="RefreshStatus" Loading="@_isLoading" Variant="ButtonVariant.Outline" Size="ButtonSize.Small" Class="mt-3">Refresh Status</BbButton>
            }
        </div>

        <div class="config-instructions mt-4">
            <h4>Configuration</h4>
            <p>Set <code>GITHUB_TOKEN</code> using one of these methods:</p>
            <ol>
                <li>
                    <strong>User secrets (recommended for development):</strong>
                    <pre><code>dotnet user-secrets set "GitHub:Token" "ghp_..." --project src/Homespun</code></pre>
                </li>
                <li>
                    <strong>Environment variable:</strong>
                    <pre><code>GITHUB_TOKEN=ghp_...</code></pre>
                </li>
                <li>
                    <strong>Docker/container:</strong>
                    <pre><code>-e GITHUB_TOKEN=ghp_...</code></pre>
                </li>
            </ol>
            <p class="text-text-muted">
                The token needs <code>repo</code> scope for pushing code and creating PRs.
                Create a token at <a href="https://github.com/settings/tokens" target="_blank">github.com/settings/tokens</a>.
            </p>
        </div>
    </section>
</div>

<style>
    .settings-container {
        max-width: 800px;
    }

    .settings-section {
        margin-bottom: 2rem;
    }

    .settings-section h2 {
        font-size: 1.25rem;
        margin-bottom: 0.5rem;
    }

    .appearance-card {
        background: var(--bg-card);
        border: 1px solid var(--border-color);
        border-radius: 0.5rem;
        padding: 1.5rem;
    }

    .appearance-card h4 {
        font-size: 1rem;
        margin-bottom: 0.75rem;
    }

    .theme-selector {
        display: flex;
        gap: 0.5rem;
    }

    .theme-option {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.25rem;
        padding: 0.75rem 1.25rem;
        background: var(--bg-secondary);
        border: 2px solid var(--border-color);
        border-radius: 0.5rem;
        cursor: pointer;
        transition: all 0.15s ease;
        color: var(--text-primary);
    }

    .theme-option:hover {
        border-color: var(--text-muted);
    }

    .theme-option.active {
        border-color: var(--color-ocean);
        background: rgba(81, 165, 193, 0.1);
    }

    .theme-option :deep(svg) {
        width: 1.25rem;
        height: 1.25rem;
    }

    .theme-option span {
        font-size: 0.75rem;
        font-weight: 500;
    }

    .auth-status-card {
        background: var(--bg-card);
        border: 1px solid var(--border-color);
        border-radius: 0.5rem;
        padding: 1.5rem;
    }

    .status-header {
        margin-bottom: 1rem;
    }

    .status-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 1rem;
        font-weight: 500;
        padding: 0.25rem 0.75rem;
        border-radius: 0.25rem;
    }

    .status-ok {
        background-color: rgba(54, 163, 144, 0.1);
        color: var(--status-success);
    }

    .status-error {
        background-color: rgba(218, 26, 50, 0.1);
        color: var(--status-error);
    }

    .auth-details {
        display: grid;
        grid-template-columns: auto 1fr;
        gap: 0.5rem 1rem;
        margin: 0;
    }

    .auth-details dt {
        font-weight: 500;
        color: var(--text-muted);
    }

    .auth-details dd {
        margin: 0;
    }

    .config-instructions h4 {
        font-size: 1rem;
        margin-bottom: 0.5rem;
    }

    .config-instructions pre {
        background: var(--bg-card);
        border: 1px solid var(--border-color);
        border-radius: 0.25rem;
        padding: 0.5rem;
        overflow-x: auto;
        font-size: 0.875rem;
    }

    .config-instructions ol {
        padding-left: 1.25rem;
    }

    .config-instructions li {
        margin-bottom: 1rem;
    }
</style>

@code {
    private GitHubAuthStatus? _authStatus;
    private GitHubStatusInfo? _githubStatus;
    private bool _isLoading = true;
    private string _currentTheme = "auto";

    protected override async Task OnInitializedAsync()
    {
        await BreadcrumbService.SetContextAsync(new BreadcrumbContext { PageName = "Settings" });
        await RefreshStatus();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            _currentTheme = await JSRuntime.InvokeAsync<string>("themeManager.getTheme") ?? "auto";
            StateHasChanged();
        }
    }

    private async Task SetTheme(string theme)
    {
        _currentTheme = theme;
        await JSRuntime.InvokeVoidAsync("themeManager.setTheme", theme);
    }

    private async Task RefreshStatus()
    {
        _isLoading = true;
        StateHasChanged();

        try
        {
            _authStatus = await GitHubInfoApi.GetAuthStatusAsync();
            _githubStatus = await GitHubInfoApi.GetStatusAsync();
        }
        catch (Exception)
        {
            _authStatus = new GitHubAuthStatus
            {
                IsAuthenticated = false,
                ErrorMessage = "Failed to check authentication status"
            };
        }

        _isLoading = false;
        StateHasChanged();
    }

    private static string FormatAuthMethod(GitHubAuthMethod method) => method switch
    {
        GitHubAuthMethod.Token => "Token (GITHUB_TOKEN)",
        GitHubAuthMethod.GhCli => "gh CLI",
        GitHubAuthMethod.Both => "Token + gh CLI",
        _ => "None"
    };
}
