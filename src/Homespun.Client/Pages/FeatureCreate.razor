@page "/projects/{ProjectId}/pull-requests/create"
@inject HttpProjectApiService ProjectApi
@inject HttpPullRequestApiService PullRequestApi
@inject IBreadcrumbService BreadcrumbService
@inject NavigationManager NavigationManager

<PageTitle>New Pull Request</PageTitle>

<h1>New Pull Request</h1>

@if (_project == null)
{
    <p>Loading...</p>
}
else
{
    <p class="text-text-muted">Creating pull request for @_project.Name</p>

    <div class="grid grid-cols-12">
        <div class="col-span-8">
            <EditForm Model="_model" OnValidSubmit="HandleSubmit" FormName="CreatePullRequest">
                <DataAnnotationsValidator />
                <ValidationSummary class="text-danger" />

                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <InputText id="title" class="form-control" @bind-Value="_model.Title" />
                    <ValidationMessage For="() => _model.Title" class="text-danger" />
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <InputTextArea id="description" class="form-control" rows="3" @bind-Value="_model.Description" />
                </div>

                <div class="mb-3">
                    <label for="branchName" class="form-label">Branch Name</label>
                    <InputText id="branchName" class="form-control" @bind-Value="_model.BranchName" placeholder="feature/my-feature" />
                    <div class="form-text">Optional. Required for development and PR creation.</div>
                </div>

                <div class="mb-3">
                    <label for="parentId" class="form-label">Parent Pull Request</label>
                    <InputSelect id="parentId" class="form-select" @bind-Value="_model.ParentId">
                        <option value="">None (root)</option>
                        @foreach (var pr in _allPullRequests)
                        {
                            <option value="@pr.Id">@pr.Title</option>
                        }
                    </InputSelect>
                    <div class="form-text">Optional. Select a parent to nest this pull request.</div>
                </div>

                <div class="flex gap-2">
                    <AsyncActionButton ButtonType="submit"
                                       IsLoadingExternal="_isSubmitting"
                                       Variant="ButtonVariant.Default"
                                       Text="Create Pull Request" />
                    <a href="projects/@ProjectId" class="btn btn-secondary">Cancel</a>
                </div>
            </EditForm>
        </div>
    </div>
}

@code {
    [Parameter]
    public string ProjectId { get; set; } = "";

    private Project? _project;
    private List<PullRequest> _allPullRequests = [];
    private PullRequestModel _model = new();
    private bool _isSubmitting;

    protected override async Task OnInitializedAsync()
    {
        _project = await ProjectApi.GetProjectAsync(ProjectId);
        if (_project != null)
        {
            // Set breadcrumb context with project and page info
            await BreadcrumbService.SetContextAsync(new BreadcrumbContext
            {
                ProjectId = ProjectId,
                PageName = "New Pull Request"
            });

            _allPullRequests = await PullRequestApi.GetProjectPullRequestsAsync(ProjectId);
        }
    }

    private async Task HandleSubmit()
    {
        _isSubmitting = true;
        try
        {
            await PullRequestApi.CreatePullRequestAsync(new CreatePullRequestRequest
            {
                ProjectId = ProjectId,
                Title = _model.Title,
                Description = _model.Description,
                BranchName = _model.BranchName,
                ParentId = string.IsNullOrEmpty(_model.ParentId) ? null : _model.ParentId
            });

            NavigationManager.NavigateTo($"projects/{ProjectId}");
        }
        finally
        {
            _isSubmitting = false;
        }
    }

    private class PullRequestModel
    {
        public string Title { get; set; } = "";
        public string? Description { get; set; }
        public string? BranchName { get; set; }
        public string? ParentId { get; set; }
    }
}
