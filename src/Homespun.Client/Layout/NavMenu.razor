@inject HttpProjectApiService ProjectApi

<div class="p-2">
    <nav class="flex flex-col">
        <div class="nav-item text-sm">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <i class="bi bi-list-nested" aria-hidden="true"></i> Projects
            </NavLink>
        </div>
        @if (_projects.Any())
        {
            <div class="project-list">
                @foreach (var project in _projects)
                {
                    <div class="nav-item nav-item-sub text-sm">
                        <NavLink class="nav-link" href="@($"projects/{project.Id}")">
                            @project.Name
                        </NavLink>
                    </div>
                }
            </div>
        }
        <div class="nav-item text-sm">
            <NavLink class="nav-link" href="sessions">
                <i class="bi bi-chat-dots" aria-hidden="true"></i> Sessions
            </NavLink>
        </div>
        <div class="nav-item text-sm">
            <NavLink class="nav-link" href="agents">
                <i class="bi bi-robot" aria-hidden="true"></i> Agents
            </NavLink>
        </div>
        <div class="nav-item text-sm">
            <NavLink class="nav-link" href="settings">
                <i class="bi bi-gear" aria-hidden="true"></i> Settings
            </NavLink>
        </div>
        @if (_isMockMode)
        {
            <div class="nav-item text-sm mt-2 pt-2" style="border-top: 1px solid var(--border-color);">
                <NavLink class="nav-link" href="design">
                    <i class="bi bi-palette" aria-hidden="true"></i> Design
                </NavLink>
            </div>
        }
    </nav>
</div>

@code {
    private bool _isMockMode;
    private List<Project> _projects = [];

    protected override async Task OnInitializedAsync()
    {
        // TODO: Detect mock mode via configuration or API endpoint
        _isMockMode = false;

        _projects = await ProjectApi.GetAllProjectsAsync();
    }
}
