@inject HttpAgentPromptApiService AgentPromptApi

<div class="d-flex justify-content-between align-items-center mb-3">
    <h5 class="mb-0">Project Prompts</h5>
    <button class="btn btn-primary btn-sm" @onclick="ShowAddModal">
        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" viewBox="0 0 16 16" class="me-1">
            <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
        </svg>
        Add Prompt
    </button>
</div>

<p class="text-muted small mb-3">
    Project-specific prompts appear alongside global prompts when starting sessions on this project's issues or pull requests.
</p>

@if (!_prompts.Any())
{
    <EmptyState
        Title="No Project Prompts"
        Description="This project uses global prompts only. Add a project-specific prompt to customise agent behaviour for this project."
        ActionLabel="Add Prompt"
        ActionClick="ShowAddModal">
        <Icon>
            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09zM18.259 8.715L18 9.75l-.259-1.035a3.375 3.375 0 00-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 002.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 002.456 2.456L21.75 6l-1.035.259a3.375 3.375 0 00-2.456 2.456zM16.894 20.567L16.5 21.75l-.394-1.183a2.25 2.25 0 00-1.423-1.423L13.5 18.75l1.183-.394a2.25 2.25 0 001.423-1.423l.394-1.183.394 1.183a2.25 2.25 0 001.423 1.423l1.183.394-1.183.394a2.25 2.25 0 00-1.423 1.423z" />
            </svg>
        </Icon>
    </EmptyState>
}
else
{
    <div class="row">
        @foreach (var prompt in _prompts)
        {
            <div class="col-md-6 col-lg-4 mb-3">
                <div class="card h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span class="fw-bold">@prompt.Name</span>
                        <span class="badge @(prompt.Mode == SessionMode.Plan ? "bg-info" : "bg-success")">
                            @prompt.Mode
                        </span>
                    </div>
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(prompt.InitialMessage))
                        {
                            <pre class="prompt-preview mb-0">@TruncateMessage(prompt.InitialMessage)</pre>
                        }
                        else
                        {
                            <p class="text-muted mb-0"><em>No initial message configured</em></p>
                        }
                    </div>
                    <div class="card-footer d-flex justify-content-end gap-2">
                        <button class="btn btn-sm btn-outline-secondary" @onclick="() => ShowEditModal(prompt)">
                            Edit
                        </button>
                        <button class="btn btn-sm btn-outline-danger" @onclick="() => ShowDeleteConfirmation(prompt)">
                            Delete
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
}

<Modal IsOpen="@_showModal"
       OnClose="@HideModal"
       Title="@(_editingPrompt == null ? "Add Project Prompt" : "Edit Project Prompt")"
       Size="ModalSize.Lg">
    <Body>
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" @bind="_modalName" placeholder="e.g., Plan, Build, Review" />
        </div>
        <div class="mb-3">
            <label class="form-label">Mode</label>
            <select class="form-select" @bind="_modalMode">
                <option value="@SessionMode.Plan">Plan (Read-only tools)</option>
                <option value="@SessionMode.Build">Build (Full access)</option>
            </select>
            <div class="form-text">
                Plan mode restricts the agent to read-only tools. Build mode allows code editing.
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label">Initial Message Template</label>
            <textarea class="form-control font-monospace" rows="12" @bind="_modalMessage"
                placeholder="Enter the initial message to send to the agent..."></textarea>
            <div class="form-text">
                Available placeholders: <code>@("{{title}}")</code>, <code>@("{{id}}")</code>,
                <code>@("{{type}}")</code>, <code>@("{{branch}}")</code>, <code>@("{{description}}")</code>
            </div>
        </div>
    </Body>
    <Footer>
        @if (!string.IsNullOrEmpty(_modalError))
        {
            <div class="text-danger me-auto">@_modalError</div>
        }
        <button type="button" class="btn btn-secondary" @onclick="HideModal">Cancel</button>
        <AsyncActionButton OnClick="SavePrompt"
                           IsLoadingExternal="_isSaving"
                           CssClass="btn-primary"
                           Text="Save" />
    </Footer>
</Modal>

<ConfirmModal IsOpen="@(_showDeleteConfirmation && _promptToDelete != null)"
              OnCancel="@HideDeleteConfirmation"
              OnConfirm="@DeletePrompt"
              Title="Delete Project Prompt"
              ConfirmText="Delete"
              ConfirmVariant="ConfirmButtonVariant.Danger"
              IsProcessing="@_isDeleting">
    <p>Are you sure you want to delete the project prompt <strong>"@_promptToDelete?.Name"</strong>?</p>
    <p class="text-muted mb-0">This action cannot be undone.</p>
</ConfirmModal>

<style>
    .prompt-preview {
        background-color: var(--bg-secondary, #f8f9fa);
        padding: 0.5rem;
        border-radius: 4px;
        font-size: 0.8rem;
        max-height: 120px;
        overflow-y: auto;
        white-space: pre-wrap;
        word-wrap: break-word;
    }
</style>

@code {
    [Parameter] public required string ProjectId { get; set; }

    private IReadOnlyList<AgentPrompt> _prompts = [];
    private bool _showModal;
    private bool _showDeleteConfirmation;
    private bool _isSaving;
    private bool _isDeleting;
    private string? _modalError;
    private AgentPrompt? _editingPrompt;
    private AgentPrompt? _promptToDelete;

    // Modal form fields
    private string _modalName = string.Empty;
    private SessionMode _modalMode = SessionMode.Build;
    private string _modalMessage = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await RefreshPrompts();
    }

    private async Task RefreshPrompts()
    {
        _prompts = await AgentPromptApi.GetProjectPromptsAsync(ProjectId);
    }

    private string TruncateMessage(string message)
    {
        const int maxLength = 200;
        if (message.Length <= maxLength)
            return message;
        return message[..maxLength] + "...";
    }

    private void ShowAddModal()
    {
        _editingPrompt = null;
        _modalName = string.Empty;
        _modalMode = SessionMode.Build;
        _modalMessage = string.Empty;
        _modalError = null;
        _showModal = true;
    }

    private void ShowEditModal(AgentPrompt prompt)
    {
        _editingPrompt = prompt;
        _modalName = prompt.Name;
        _modalMode = prompt.Mode;
        _modalMessage = prompt.InitialMessage ?? string.Empty;
        _modalError = null;
        _showModal = true;
    }

    private void HideModal()
    {
        _showModal = false;
        _editingPrompt = null;
        _modalError = null;
    }

    private async Task SavePrompt()
    {
        if (string.IsNullOrWhiteSpace(_modalName))
        {
            _modalError = "Name is required.";
            return;
        }

        _isSaving = true;
        _modalError = null;

        try
        {
            if (_editingPrompt == null)
            {
                await AgentPromptApi.CreatePromptAsync(
                    _modalName.Trim(),
                    string.IsNullOrWhiteSpace(_modalMessage) ? null : _modalMessage,
                    _modalMode,
                    ProjectId);
            }
            else
            {
                await AgentPromptApi.UpdatePromptAsync(
                    _editingPrompt.Id,
                    _modalName.Trim(),
                    string.IsNullOrWhiteSpace(_modalMessage) ? null : _modalMessage,
                    _modalMode);
            }

            await RefreshPrompts();
            HideModal();
        }
        catch (Exception ex)
        {
            _modalError = ex.Message;
        }
        finally
        {
            _isSaving = false;
        }
    }

    private void ShowDeleteConfirmation(AgentPrompt prompt)
    {
        _promptToDelete = prompt;
        _showDeleteConfirmation = true;
    }

    private void HideDeleteConfirmation()
    {
        _showDeleteConfirmation = false;
        _promptToDelete = null;
    }

    private async Task DeletePrompt()
    {
        if (_promptToDelete == null) return;

        _isDeleting = true;
        try
        {
            await AgentPromptApi.DeletePromptAsync(_promptToDelete.Id);
            await RefreshPrompts();
            HideDeleteConfirmation();
        }
        finally
        {
            _isDeleting = false;
        }
    }
}
