@*
    EmptyState - A reusable component for displaying empty list placeholders.
    Supports icon, title, description, and optional action button.
*@

<div class="empty-state">
    @if (Icon != null)
    {
        <div class="empty-state-icon">
            @Icon
        </div>
    }

    @if (!string.IsNullOrEmpty(Title))
    {
        <h5 class="empty-state-title">@Title</h5>
    }

    @if (!string.IsNullOrEmpty(Description))
    {
        <p class="empty-state-description">@Description</p>
    }

    @if (ActionContent != null)
    {
        <div class="empty-state-action">
            @ActionContent
        </div>
    }
    else if (!string.IsNullOrEmpty(ActionLabel) && !string.IsNullOrEmpty(ActionHref))
    {
        <div class="empty-state-action">
            <a href="@ActionHref" class="btn btn-primary btn-sm">@ActionLabel</a>
        </div>
    }
    else if (!string.IsNullOrEmpty(ActionLabel) && ActionClick.HasDelegate)
    {
        <div class="empty-state-action">
            <button class="btn btn-primary btn-sm" @onclick="ActionClick">@ActionLabel</button>
        </div>
    }
</div>

@code {
    /// <summary>
    /// The title displayed prominently in the empty state.
    /// </summary>
    [Parameter]
    public string? Title { get; set; }

    /// <summary>
    /// The description text providing additional context.
    /// </summary>
    [Parameter]
    public string? Description { get; set; }

    /// <summary>
    /// Optional icon to display above the title. Use a RenderFragment for SVG or other markup.
    /// </summary>
    [Parameter]
    public RenderFragment? Icon { get; set; }

    /// <summary>
    /// The label for the action button.
    /// </summary>
    [Parameter]
    public string? ActionLabel { get; set; }

    /// <summary>
    /// The href for the action button (creates a link).
    /// </summary>
    [Parameter]
    public string? ActionHref { get; set; }

    /// <summary>
    /// The click handler for the action button.
    /// </summary>
    [Parameter]
    public EventCallback ActionClick { get; set; }

    /// <summary>
    /// Optional custom action content. When provided, replaces the default action button.
    /// </summary>
    [Parameter]
    public RenderFragment? ActionContent { get; set; }
}
