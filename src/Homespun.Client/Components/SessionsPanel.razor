@using Fleece.Core.Models
@using Microsoft.AspNetCore.SignalR.Client
@implements IAsyncDisposable

@inject HttpSessionApiService SessionApi
@inject HttpProjectApiService ProjectApi
@inject HttpPullRequestApiService PullRequestApi
@inject HttpIssueApiService IssueApi
@inject NavigationManager NavigationManager
@inject ILogger<SessionsPanel> Logger

<div class="sessions-panel">
    @if (_sessions.Count == 0)
    {
        <div class="empty-state">
            <div class="empty-icon"><LucideIcon Name="cpu" Size="48" /></div>
            <h5>No Active Sessions</h5>
            <p class="text-text-muted">Start a Claude Code session from an issue or pull request to see it here.</p>
        </div>
    }
    else if (string.IsNullOrEmpty(ProjectId))
    {
        @* Global view: group by project *@
        @foreach (var group in _projectGroups)
        {
            <div class="group-container mb-4">
                <div class="group-header">
                    <h5>@group.ProjectName</h5>
                    <span class="badge bg-secondary">@group.Sessions.Count session@(group.Sessions.Count != 1 ? "s" : "")</span>
                </div>

                <div class="sessions-list">
                    @foreach (var session in group.Sessions)
                    {
                        <SessionCard Session="session"
                                     EntityInfo="_entityInfoCache.GetValueOrDefault(session.EntityId)"
                                     IsStopping="_stoppingSessions.Contains(session.Id)"
                                     OnStop="() => StopSession(session.Id)" />
                    }
                </div>
            </div>
        }
    }
    else
    {
        @* Project view: group by status *@
        @foreach (var group in _statusGroups)
        {
            <div class="group-container mb-4">
                <div class="group-header">
                    <div class="flex items-center gap-2">
                        <span class="status-indicator @group.Status.ToIndicatorClass()"></span>
                        <h5>@group.Status.ToDisplayLabel()</h5>
                    </div>
                    <span class="badge bg-secondary">@group.Sessions.Count session@(group.Sessions.Count != 1 ? "s" : "")</span>
                </div>

                <div class="sessions-list">
                    @foreach (var session in group.Sessions)
                    {
                        <SessionCard Session="session"
                                     EntityInfo="_entityInfoCache.GetValueOrDefault(session.EntityId)"
                                     IsStopping="_stoppingSessions.Contains(session.Id)"
                                     OnStop="() => StopSession(session.Id)" />
                    }
                </div>
            </div>
        }
    }

    @if (!string.IsNullOrEmpty(_errorMessage))
    {
        <div class="alert alert-danger">@_errorMessage</div>
    }
</div>

