@using Homespun.Client.Services

@inject IKeyboardNavigationService NavService

<div class="issue-control-panel">
    <button type="button"
            class="control-panel-btn"
            data-testid="create-issue-above-btn"
            title="Create issue above (Shift+O)"
            disabled="@IsDisabled"
            @onclick="HandleCreateAbove"
            @onclick:stopPropagation="true">
        <i class="bi bi-plus-circle"></i>
        <span class="btn-label">Above</span>
    </button>

    <button type="button"
            class="control-panel-btn"
            data-testid="create-issue-below-btn"
            title="Create issue below (o)"
            disabled="@IsDisabled"
            @onclick="HandleCreateBelow"
            @onclick:stopPropagation="true">
        <i class="bi bi-plus-circle"></i>
        <span class="btn-label">Below</span>
    </button>

    <div class="control-panel-separator"></div>

    <button type="button"
            class="control-panel-btn @(IsMakeChildOfActive ? "ring-2 ring-offset-2 ring-blue-500" : "")"
            data-testid="make-child-of-btn"
            title="Make this issue a child of another (click to select target)"
            disabled="@IsMoveButtonDisabled(MoveOperationType.AsChildOf)"
            @onclick="HandleMakeChildOf"
            @onclick:stopPropagation="true">
        <i class="bi bi-box-arrow-in-up-right"></i>
        <span class="btn-label">Child Of</span>
    </button>

    <button type="button"
            class="control-panel-btn @(IsMakeParentOfActive ? "ring-2 ring-offset-2 ring-blue-500" : "")"
            data-testid="make-parent-of-btn"
            title="Make another issue a child of this issue (click to select target)"
            disabled="@IsMoveButtonDisabled(MoveOperationType.AsParentOf)"
            @onclick="HandleMakeParentOf"
            @onclick:stopPropagation="true">
        <i class="bi bi-box-arrow-in-down-left"></i>
        <span class="btn-label">Parent Of</span>
    </button>
</div>

<style>
    .issue-control-panel {
        position: sticky;
        top: calc(2.5rem + 8px);
        z-index: 99;
        background: var(--bg-primary);
        border-bottom: 1px solid var(--border-color);
        padding: var(--spacing-sm) var(--spacing-md);
        display: flex;
        gap: var(--spacing-sm);
        align-items: center;
    }

    .control-panel-btn {
        display: flex;
        align-items: center;
        gap: var(--spacing-xs);
        height: 36px;
        padding: 0 var(--spacing-md);
        border: none;
        border-radius: var(--radius-sm);
        background: var(--color-ocean);
        color: white;
        font-size: 0.875rem;
        font-weight: 500;
        cursor: pointer;
        transition: background-color var(--transition-fast), transform var(--transition-fast);
    }

    .control-panel-btn:hover:not(:disabled) {
        background: var(--color-ocean-dark, #2563eb);
        transform: scale(1.02);
    }

    .control-panel-btn:disabled {
        opacity: 0.5;
        cursor: not-allowed;
        transform: none;
    }

    .control-panel-btn i {
        font-size: 1rem;
    }

    .btn-label {
        font-size: 0.875rem;
    }

    .control-panel-separator {
        width: 1px;
        height: 24px;
        background: var(--border-color);
        margin: 0 var(--spacing-xs);
    }

    .control-panel-btn.btn-active,
    .control-panel-btn.ring-2 {
        box-shadow: 0 0 0 2px white, 0 0 0 4px var(--color-ocean);
    }
</style>

@code {
    private bool IsDisabled => NavService.EditMode != KeyboardEditMode.Viewing;

    private bool IsInSelectionMode => NavService.EditMode == KeyboardEditMode.SelectingMoveTarget;

    private bool IsMakeChildOfActive =>
        IsInSelectionMode && NavService.CurrentMoveOperation == MoveOperationType.AsChildOf;

    private bool IsMakeParentOfActive =>
        IsInSelectionMode && NavService.CurrentMoveOperation == MoveOperationType.AsParentOf;

    private bool IsMoveButtonDisabled(MoveOperationType operationType)
    {
        // Disabled if no issue selected
        if (NavService.SelectedIndex < 0) return true;

        // In selection mode, disable the button that's not active
        if (IsInSelectionMode)
        {
            return NavService.CurrentMoveOperation != operationType;
        }

        // Disabled if in any other edit mode
        return NavService.EditMode != KeyboardEditMode.Viewing;
    }

    private void HandleCreateAbove()
    {
        if (IsDisabled) return;
        NavService.CreateIssueAbove();
    }

    private void HandleCreateBelow()
    {
        if (IsDisabled) return;
        NavService.CreateIssueBelow();
    }

    private void HandleMakeChildOf()
    {
        if (IsMoveButtonDisabled(MoveOperationType.AsChildOf)) return;
        NavService.StartMakeChildOf();
    }

    private void HandleMakeParentOf()
    {
        if (IsMoveButtonDisabled(MoveOperationType.AsParentOf)) return;
        NavService.StartMakeParentOf();
    }
}
