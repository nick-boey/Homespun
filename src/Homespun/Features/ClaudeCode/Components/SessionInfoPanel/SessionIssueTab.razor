@using global::Fleece.Core.Models
@using Homespun.Features.Fleece.Services
@using Homespun.Features.Projects
@using Homespun.Features.Shared.Services
@inject IFleeceService FleeceService
@inject IProjectService ProjectService
@inject IMarkdownRenderingService MarkdownService

<div class="issue-tab">
    @if (string.IsNullOrEmpty(EntityId) || string.IsNullOrEmpty(ProjectId))
    {
        <div class="empty-state">
            <span class="empty-icon">üìù</span>
            <p>Session not loaded</p>
        </div>
    }
    else if (IsCloneEntity())
    {
        <div class="empty-state">
            <span class="empty-icon">üîó</span>
            <p>No issue linked to this session</p>
            <span class="entity-info">Working on branch: @GetCloneBranch()</span>
        </div>
    }
    else if (_isLoading)
    {
        <div class="loading-state">
            <div class="spinner-border spinner-border-sm" role="status"></div>
            <span>Loading issue...</span>
        </div>
    }
    else if (_issue == null)
    {
        <div class="empty-state">
            <span class="empty-icon">‚ùì</span>
            <p>Issue not found</p>
            <span class="entity-info">ID: @EntityId</span>
        </div>
    }
    else
    {
        <div class="issue-header">
            <div class="issue-id">@_issue.Id</div>
            <h3 class="issue-title">@_issue.Title</h3>
            <div class="issue-badges">
                <span class="badge @GetTypeBadgeClass(_issue.Type)">@_issue.Type</span>
                <span class="badge @GetStatusBadgeClass(_issue.Status)">@_issue.Status</span>
                @if (_issue.Priority.HasValue)
                {
                    <span class="badge priority">P@_issue.Priority</span>
                }
            </div>
        </div>

        @if (!string.IsNullOrEmpty(_issue.Description))
        {
            <div class="issue-description markdown-content">
                @((MarkupString)MarkdownService.RenderToHtml(_issue.Description))
            </div>
        }

        @if (_issue.ParentIssues.Count > 0)
        {
            <div class="issue-meta">
                <span class="meta-label">Parents:</span>
                <span class="meta-value">
                    @foreach (var parent in _issue.ParentIssues)
                    {
                        <code class="parent-id">@parent</code>
                    }
                </span>
            </div>
        }
    }
</div>

<style>
    .issue-tab {
        display: flex;
        flex-direction: column;
        height: 100%;
        overflow-y: auto;
    }

    .loading-state,
    .empty-state {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: var(--spacing-lg);
        color: var(--text-muted);
        text-align: center;
        gap: var(--spacing-sm);
    }

    .empty-icon {
        font-size: 2rem;
        opacity: 0.5;
    }

    .empty-state p {
        margin: 0;
        font-size: 0.875rem;
    }

    .entity-info {
        font-size: 0.75rem;
        color: var(--text-muted);
        font-family: monospace;
    }

    .issue-header {
        padding: var(--spacing-sm);
        border-bottom: 1px solid var(--border-color);
    }

    .issue-id {
        font-size: 0.75rem;
        color: var(--text-muted);
        font-family: monospace;
        margin-bottom: var(--spacing-xs);
    }

    .issue-title {
        font-size: 1rem;
        font-weight: 600;
        margin: 0 0 var(--spacing-sm) 0;
        color: var(--text-primary);
        line-height: 1.3;
    }

    .issue-badges {
        display: flex;
        flex-wrap: wrap;
        gap: var(--spacing-xs);
    }

    .badge {
        padding: 0.125rem 0.5rem;
        border-radius: var(--radius-sm);
        font-size: 0.6875rem;
        font-weight: 600;
        text-transform: uppercase;
    }

    .badge.feature { background: var(--color-lagoon); color: white; }
    .badge.bug { background: var(--status-error); color: white; }
    .badge.task { background: var(--status-info); color: white; }
    .badge.chore { background: var(--bg-tertiary); color: var(--text-secondary); }

    .badge.open { background: var(--status-info); color: white; }
    .badge.progress { background: var(--color-lagoon); color: white; }
    .badge.review { background: var(--status-info); color: white; }
    .badge.complete { background: var(--status-success); color: white; }
    .badge.closed { background: var(--status-success); color: white; }

    .badge.priority {
        background: var(--bg-secondary);
        color: var(--text-secondary);
    }

    .issue-description {
        padding: var(--spacing-sm);
        font-size: 0.875rem;
        line-height: 1.5;
        color: var(--text-secondary);
        border-bottom: 1px solid var(--border-color);
    }

    .issue-description :deep(p) {
        margin: 0 0 var(--spacing-sm) 0;
    }

    .issue-description :deep(p:last-child) {
        margin-bottom: 0;
    }

    .issue-meta {
        padding: var(--spacing-xs) var(--spacing-sm);
        font-size: 0.8125rem;
        display: flex;
        gap: var(--spacing-sm);
        border-bottom: 1px solid var(--border-color);
    }

    .meta-label {
        color: var(--text-muted);
        flex-shrink: 0;
    }

    .meta-value {
        color: var(--text-secondary);
    }

    .parent-id {
        font-size: 0.75rem;
        background: var(--bg-secondary);
        padding: 0.125rem 0.25rem;
        border-radius: var(--radius-sm);
        margin-right: var(--spacing-xs);
    }
</style>

@code {
    [Parameter] public string? EntityId { get; set; }
    [Parameter] public string? ProjectId { get; set; }

    private Issue? _issue;
    private bool _isLoading = true;

    protected override async Task OnParametersSetAsync()
    {
        if (!string.IsNullOrEmpty(EntityId) && !string.IsNullOrEmpty(ProjectId) && !IsCloneEntity())
        {
            await LoadIssueAsync();
        }
        else
        {
            _isLoading = false;
        }
    }

    private async Task LoadIssueAsync()
    {
        _isLoading = true;
        StateHasChanged();

        try
        {
            var project = await ProjectService.GetByIdAsync(ProjectId!);
            if (project != null)
            {
                _issue = await FleeceService.GetIssueAsync(project.LocalPath, EntityId!);
            }
        }
        catch
        {
            _issue = null;
        }
        finally
        {
            _isLoading = false;
            StateHasChanged();
        }
    }

    private bool IsCloneEntity() => EntityId?.StartsWith("clone:") == true;

    private string GetCloneBranch() => EntityId?.Replace("clone:", "") ?? "";

    private static string GetTypeBadgeClass(IssueType type) => type switch
    {
        IssueType.Feature => "feature",
        IssueType.Bug => "bug",
        IssueType.Task => "task",
        IssueType.Chore => "chore",
        _ => ""
    };

    private static string GetStatusBadgeClass(IssueStatus status) => status switch
    {
        IssueStatus.Open => "open",
        IssueStatus.Progress => "progress",
        IssueStatus.Review => "review",
        IssueStatus.Complete => "complete",
        IssueStatus.Closed => "closed",
        _ => ""
    };
}
