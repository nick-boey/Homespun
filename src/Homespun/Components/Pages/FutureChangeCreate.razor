@page "/projects/{ProjectId}/features/create"
@using Homespun.Features.Projects
@using Homespun.Features.PullRequests.Data.Entities
@using Homespun.Features.Roadmap
@inject ProjectService ProjectService
@inject IRoadmapService RoadmapService
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>New Future Change</PageTitle>

<h1>New Future Change</h1>

@if (_project == null)
{
    <p>Loading...</p>
}
else
{
    <p class="text-muted">Adding future change to @_project.Name</p>

    <div class="row">
        <div class="col-md-8">
            <EditForm Model="_model" OnValidSubmit="HandleSubmit" FormName="CreateFutureChange">
                <DataAnnotationsValidator />
                <ValidationSummary class="text-danger" />

                @if (!string.IsNullOrEmpty(_errorMessage))
                {
                    <div class="alert alert-danger">@_errorMessage</div>
                }

                <div class="mb-3">
                    <label for="shortTitle" class="form-label">Short Title (Branch ID) <span class="text-danger">*</span></label>
                    <InputText id="shortTitle" class="form-control" @bind-Value="_model.ShortTitle" placeholder="my-feature-id" />
                    <div class="form-text">Lowercase letters, numbers, and hyphens only. Used for branch naming.</div>
                    <ValidationMessage For="() => _model.ShortTitle" class="text-danger" />
                </div>

                <div class="mb-3">
                    <label for="title" class="form-label">Title <span class="text-danger">*</span></label>
                    <InputText id="title" class="form-control" @bind-Value="_model.Title" />
                    <ValidationMessage For="() => _model.Title" class="text-danger" />
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="group" class="form-label">Group <span class="text-danger">*</span></label>
                        <InputText id="group" class="form-control" @bind-Value="_model.Group" placeholder="frontend, backend, etc." />
                        <div class="form-text">Logical grouping (e.g., frontend, backend, api)</div>
                        <ValidationMessage For="() => _model.Group" class="text-danger" />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label for="type" class="form-label">Type <span class="text-danger">*</span></label>
                        <InputSelect id="type" class="form-select" @bind-Value="_model.Type">
                            @foreach (var type in Enum.GetValues<ChangeType>())
                            {
                                <option value="@type">@type.ToString().ToLowerInvariant()</option>
                            }
                        </InputSelect>
                    </div>
                </div>

                @if (!string.IsNullOrWhiteSpace(_model.ShortTitle) && !string.IsNullOrWhiteSpace(_model.Group))
                {
                    <div class="mb-3">
                        <label class="form-label">Branch Name (Generated)</label>
                        <div class="form-control-plaintext font-monospace bg-light p-2 rounded">
                            @GetGeneratedBranchName()
                        </div>
                        <div class="form-text">This will be the git branch name and unique ID for this change.</div>
                    </div>
                }

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <InputTextArea id="description" class="form-control" rows="2" @bind-Value="_model.Description" />
                    <div class="form-text">Short summary of what this change involves.</div>
                </div>

                <div class="mb-3">
                    <label for="instructions" class="form-label">Instructions</label>
                    <InputTextArea id="instructions" class="form-control" rows="4" @bind-Value="_model.Instructions" />
                    <div class="form-text">Detailed implementation instructions for the AI agent.</div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="priority" class="form-label">Priority</label>
                        <InputSelect id="priority" class="form-select" @bind-Value="_model.Priority">
                            <option value="">Not set</option>
                            @foreach (var priority in Enum.GetValues<Priority>())
                            {
                                <option value="@priority">@priority</option>
                            }
                        </InputSelect>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label for="complexity" class="form-label">Estimated Complexity</label>
                        <InputSelect id="complexity" class="form-select" @bind-Value="_model.Complexity">
                            <option value="">Not set</option>
                            @foreach (var complexity in Enum.GetValues<Complexity>())
                            {
                                <option value="@complexity">@complexity</option>
                            }
                        </InputSelect>
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary" disabled="@_isSubmitting">
                        @if (_isSubmitting)
                        {
                            <span class="spinner-border spinner-border-sm me-1"></span>
                        }
                        Add Future Change
                    </button>
                    <a href="projects/@ProjectId" class="btn btn-secondary">Cancel</a>
                </div>
            </EditForm>
        </div>
    </div>
}

@code {
    [Parameter]
    public string ProjectId { get; set; } = "";

    private Project? _project;
    private FutureChangeModel _model = new();
    private bool _isSubmitting;
    private string? _errorMessage;

    protected override async Task OnInitializedAsync()
    {
        _project = await ProjectService.GetByIdAsync(ProjectId);
    }

    private string GetGeneratedBranchName()
    {
        var group = _model.Group?.Trim().ToLowerInvariant() ?? "";
        var type = _model.Type.ToString().ToLowerInvariant();
        var shortTitle = _model.ShortTitle?.Trim() ?? "";
        return $"{group}/{type}/{shortTitle}";
    }

    private async Task HandleSubmit()
    {
        _isSubmitting = true;
        _errorMessage = null;

        try
        {
            // Validate required fields
            if (string.IsNullOrWhiteSpace(_model.ShortTitle))
            {
                _errorMessage = "Short Title is required.";
                return;
            }

            if (string.IsNullOrWhiteSpace(_model.Title))
            {
                _errorMessage = "Title is required.";
                return;
            }

            if (string.IsNullOrWhiteSpace(_model.Group))
            {
                _errorMessage = "Group is required.";
                return;
            }

            // Validate shortTitle format (lowercase alphanumeric + hyphens)
            var shortTitle = _model.ShortTitle.Trim();
            if (!System.Text.RegularExpressions.Regex.IsMatch(shortTitle, "^[a-z0-9-]+$"))
            {
                _errorMessage = "Short Title must contain only lowercase letters, numbers, and hyphens.";
                return;
            }

            var group = _model.Group.Trim().ToLowerInvariant();
            var type = _model.Type.ToString().ToLowerInvariant();
            var id = $"{group}/{type}/{shortTitle}";

            var change = new FutureChange
            {
                Id = id,
                ShortTitle = shortTitle,
                Title = _model.Title.Trim(),
                Group = group,
                Type = _model.Type,
                Description = string.IsNullOrWhiteSpace(_model.Description) ? null : _model.Description.Trim(),
                Instructions = string.IsNullOrWhiteSpace(_model.Instructions) ? null : _model.Instructions.Trim(),
                Priority = _model.Priority,
                EstimatedComplexity = _model.Complexity
            };

            var success = await RoadmapService.AddChangeAsync(ProjectId, change);

            if (success)
            {
                NavigationManager.NavigateTo($"projects/{ProjectId}");
            }
            else
            {
                _errorMessage = "Failed to add future change. Please check that the project exists.";
            }
        }
        catch (RoadmapValidationException ex)
        {
            _errorMessage = $"Validation error: {ex.Message}";
        }
        catch (Exception ex)
        {
            _errorMessage = $"An error occurred: {ex.Message}";
        }
        finally
        {
            _isSubmitting = false;
        }
    }

    private class FutureChangeModel
    {
        public string ShortTitle { get; set; } = "";
        public string Title { get; set; } = "";
        public string Group { get; set; } = "";
        public ChangeType Type { get; set; } = ChangeType.Feature;
        public string? Description { get; set; }
        public string? Instructions { get; set; }
        public Priority? Priority { get; set; }
        public Complexity? Complexity { get; set; }
    }
}
