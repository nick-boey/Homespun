@using Homespun.Features.ClaudeCode.Data
@using Homespun.Components.Shared.Chat

<div class="showcase-section">
    <h3>Text Content Block</h3>
    <div class="showcase-item">
        <div class="showcase-label">Renders text with the TextBlock component</div>
        <div class="showcase-preview">
            <ContentBlock Content="_textContent" />
        </div>
    </div>
</div>

<div class="showcase-section">
    <h3>Thinking Content Block</h3>
    <div class="showcase-item">
        <div class="showcase-label">Renders thinking with the ThinkingBlock component</div>
        <div class="showcase-preview">
            <ContentBlock Content="_thinkingContent" />
        </div>
    </div>
</div>

<div class="showcase-section">
    <h3>Tool Use Content Block</h3>
    <div class="showcase-item">
        <div class="showcase-label">Renders tool invocation with the ToolUseBlock component</div>
        <div class="showcase-preview">
            <ContentBlock Content="_toolUseContent" />
        </div>
    </div>
</div>

<div class="showcase-section">
    <h3>Tool Result Content Block</h3>
    <div class="showcase-item">
        <div class="showcase-label">Renders tool result with the ToolResultBlock component</div>
        <div class="showcase-preview">
            <ContentBlock Content="_toolResultContent" />
        </div>
    </div>
</div>

<div class="showcase-section">
    <h3>Streaming Content Block</h3>
    <div class="showcase-item">
        <div class="showcase-label">Content currently being streamed</div>
        <div class="showcase-preview">
            <ContentBlock Content="_streamingContent" />
        </div>
    </div>
</div>

@code {
    private ClaudeMessageContent _textContent = new()
    {
        Type = ClaudeContentType.Text,
        Text = "I'll help you implement the login form with validation."
    };

    private ClaudeMessageContent _thinkingContent = new()
    {
        Type = ClaudeContentType.Thinking,
        Text = "I need to check the existing form structure before making changes.",
        Thinking = "I need to check the existing form structure before making changes."
    };

    private ClaudeMessageContent _toolUseContent = new()
    {
        Type = ClaudeContentType.ToolUse,
        ToolName = "Read",
        ToolInput = """{"file_path": "/src/components/LoginForm.tsx"}""",
        ToolUseId = "tool_123"
    };

    private ClaudeMessageContent _toolResultContent = new()
    {
        Type = ClaudeContentType.ToolResult,
        Text = "export const LoginForm = () => { return <form>...</form>; }",
        ToolUseId = "tool_123",
        ToolResult = "export const LoginForm = () => { return <form>...</form>; }",
        ToolSuccess = true
    };

    private ClaudeMessageContent _streamingContent = new()
    {
        Type = ClaudeContentType.Text,
        Text = "Analyzing the current implementation",
        IsStreaming = true
    };
}
