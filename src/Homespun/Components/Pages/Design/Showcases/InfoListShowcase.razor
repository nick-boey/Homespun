@using Homespun.Components.Shared

<div class="showcase-section">
    <h3>Basic Usage</h3>
    <div class="showcase-item">
        <div class="showcase-label">Simple key-value pairs</div>
        <div class="showcase-preview">
            <InfoList>
                <dt>Name</dt>
                <dd>My Project</dd>
                <dt>Status</dt>
                <dd>Active</dd>
                <dt>Created</dt>
                <dd>January 15, 2024</dd>
            </InfoList>
        </div>
    </div>
</div>

<div class="showcase-section">
    <h3>With Rich Content</h3>
    <div class="showcase-item">
        <div class="showcase-label">Values with formatting and links</div>
        <div class="showcase-preview">
            <InfoList>
                <dt>Repository</dt>
                <dd><a href="https://github.com/example/repo" target="_blank">example/repo</a></dd>
                <dt>Branch</dt>
                <dd><code>feature/user-auth</code></dd>
                <dt>Commits</dt>
                <dd><span class="badge bg-primary">12</span></dd>
                <dt>Last Updated</dt>
                <dd>2 hours ago</dd>
            </InfoList>
        </div>
    </div>
</div>

<div class="showcase-section">
    <h3>Project Details Example</h3>
    <div class="showcase-item">
        <div class="showcase-label">Real-world usage scenario</div>
        <div class="showcase-preview">
            <InfoList>
                <dt>Local Path</dt>
                <dd><code>/home/user/projects/myapp</code></dd>
                <dt>GitHub</dt>
                <dd><a href="https://github.com/username/myapp" target="_blank">username/myapp</a></dd>
                <dt>Default Branch</dt>
                <dd>main</dd>
                <dt>Open Issues</dt>
                <dd>5</dd>
                <dt>Active PRs</dt>
                <dd>2</dd>
            </InfoList>
        </div>
    </div>
</div>

<div class="showcase-section">
    <h3>Issue Details Example</h3>
    <div class="showcase-item">
        <div class="showcase-label">Issue information display</div>
        <div class="showcase-preview">
            <InfoList>
                <dt>ID</dt>
                <dd><code>auth/login-fix</code></dd>
                <dt>Type</dt>
                <dd><span class="badge bg-danger">Bug</span></dd>
                <dt>Status</dt>
                <dd><span class="badge bg-primary">In Progress</span></dd>
                <dt>Priority</dt>
                <dd><span class="badge bg-warning text-dark">P1</span></dd>
                <dt>Branch Preview</dt>
                <dd><code>bug/auth/login-fix</code></dd>
            </InfoList>
        </div>
    </div>
</div>
