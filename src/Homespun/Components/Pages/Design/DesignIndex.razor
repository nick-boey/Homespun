@page "/design"
@using Homespun.Features.Design
@using Homespun.Features.Navigation
@inject IComponentRegistryService ComponentRegistry
@inject IBreadcrumbService BreadcrumbService

<PageTitle>Design System - Homespun</PageTitle>

<h1>Design System</h1>
<p class="text-text-muted mb-4">
    Browse and test UI components with mock data. This page is only available in mock mode.
</p>

@foreach (var category in ComponentRegistry.GetCategories())
{
    <section class="mb-6">
        <h2 class="text-lg font-semibold mb-3">@category</h2>
        <div class="component-grid">
            @foreach (var component in ComponentRegistry.GetComponentsByCategory(category))
            {
                <a href="/design/@component.Id" class="component-card">
                    <h3 class="component-name">@component.Name</h3>
                    @if (!string.IsNullOrEmpty(component.Description))
                    {
                        <p class="component-description">@component.Description</p>
                    }
                    @if (component.Tags.Count > 0)
                    {
                        <div class="component-tags">
                            @foreach (var tag in component.Tags.Take(3))
                            {
                                <span class="component-tag">@tag</span>
                            }
                        </div>
                    }
                </a>
            }
        </div>
    </section>
}

<style>
    .component-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: var(--spacing-md);
    }

    .component-card {
        display: block;
        padding: var(--spacing-md);
        background: var(--bg-secondary);
        border: 1px solid var(--border-color);
        border-radius: var(--radius-md);
        text-decoration: none;
        color: inherit;
        transition: border-color var(--transition-fast), box-shadow var(--transition-fast);
    }

    .component-card:hover {
        border-color: var(--color-ocean);
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .component-name {
        font-size: 1rem;
        font-weight: 600;
        margin: 0 0 var(--spacing-xs) 0;
        color: var(--text-primary);
    }

    .component-description {
        font-size: 0.875rem;
        color: var(--text-secondary);
        margin: 0 0 var(--spacing-sm) 0;
        line-height: 1.4;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .component-tags {
        display: flex;
        flex-wrap: wrap;
        gap: var(--spacing-xs);
    }

    .component-tag {
        font-size: 0.75rem;
        padding: 2px 8px;
        background: var(--bg-tertiary);
        border-radius: var(--radius-sm);
        color: var(--text-muted);
    }

    section h2 {
        border-bottom: 1px solid var(--border-color);
        padding-bottom: var(--spacing-xs);
    }
</style>

@code {
    protected override async Task OnInitializedAsync()
    {
        await BreadcrumbService.SetContextAsync(new BreadcrumbContext { PageName = "Design System" });
    }
}
