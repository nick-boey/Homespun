@using Homespun.Features.ClaudeCode.Data
@using Homespun.Features.ClaudeCode.Services

@inject IClaudeSessionService SessionService
@inject NavigationManager NavigationManager

@if (_isLoading)
{
    <div class="d-flex justify-content-center py-3">
        <div class="spinner-border spinner-border-sm text-secondary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else if (_sessions.Count > 0)
{
    <div class="session-history mt-3 border-top pt-3">
        <h6 class="text-muted small mb-2">Previous Sessions</h6>
        <div class="list-group list-group-flush">
            @foreach (var session in _sessions)
            {
                <div class="list-group-item d-flex justify-content-between align-items-center py-2 px-0 border-0">
                    <div class="d-flex align-items-center gap-2">
                        @if (session.Mode.HasValue)
                        {
                            <span class="badge @(session.Mode == SessionMode.Plan ? "bg-info" : "bg-success")">
                                @session.Mode
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Unknown</span>
                        }
                        <small class="text-muted">
                            @FormatDate(session.LastActivityAt)
                        </small>
                        @if (session.MessageCount.HasValue)
                        {
                            <small class="text-muted">
                                (@session.MessageCount msgs)
                            </small>
                        }
                    </div>
                    <button class="btn btn-sm btn-outline-primary"
                            @onclick="() => ResumeSession(session.SessionId)"
                            disabled="@_isResuming">
                        @if (_resumingSessionId == session.SessionId)
                        {
                            <span class="spinner-border spinner-border-sm me-1" role="status"></span>
                        }
                        Resume
                    </button>
                </div>
            }
        </div>
    </div>
}

@if (!string.IsNullOrEmpty(_errorMessage))
{
    <div class="alert alert-danger mt-2 py-1 px-2 small">@_errorMessage</div>
}

@code {
    [Parameter] public string EntityId { get; set; } = "";
    [Parameter] public string ProjectId { get; set; } = "";
    [Parameter] public string WorkingDirectory { get; set; } = "";

    private IReadOnlyList<ResumableSession> _sessions = [];
    private bool _isLoading = true;
    private bool _isResuming;
    private string? _resumingSessionId;
    private string? _errorMessage;

    protected override async Task OnParametersSetAsync()
    {
        if (!string.IsNullOrEmpty(WorkingDirectory))
        {
            await LoadSessionsAsync();
        }
        else
        {
            _sessions = [];
            _isLoading = false;
        }
    }

    private async Task LoadSessionsAsync()
    {
        _isLoading = true;
        _errorMessage = null;
        StateHasChanged();

        try
        {
            _sessions = await SessionService.GetResumableSessionsAsync(EntityId, WorkingDirectory);
        }
        catch (Exception ex)
        {
            _errorMessage = $"Failed to load sessions: {ex.Message}";
            _sessions = [];
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task ResumeSession(string sessionId)
    {
        _isResuming = true;
        _resumingSessionId = sessionId;
        _errorMessage = null;
        StateHasChanged();

        try
        {
            var session = await SessionService.ResumeSessionAsync(
                sessionId,
                EntityId,
                ProjectId,
                WorkingDirectory);

            NavigationManager.NavigateTo($"/session/{session.Id}");
        }
        catch (Exception ex)
        {
            _errorMessage = $"Failed to resume session: {ex.Message}";
        }
        finally
        {
            _isResuming = false;
            _resumingSessionId = null;
        }
    }

    private static string FormatDate(DateTime date)
    {
        var local = date.ToLocalTime();
        var now = DateTime.Now;

        if (local.Date == now.Date)
        {
            return $"Today {local:HH:mm}";
        }
        if (local.Date == now.Date.AddDays(-1))
        {
            return $"Yesterday {local:HH:mm}";
        }
        if (local > now.AddDays(-7))
        {
            return local.ToString("ddd HH:mm");
        }
        return local.ToString("MMM d, HH:mm");
    }
}
