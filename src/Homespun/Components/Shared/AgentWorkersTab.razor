@using Fleece.Core.Models
@using Homespun.Features.ClaudeCode.Data
@using Homespun.Features.ClaudeCode.Services
@using Homespun.Features.Fleece.Services
@using Homespun.Features.Projects
@using Homespun.Features.PullRequests.Data

@inject IClaudeSessionService ClaudeSessionService
@inject IAgentExecutionService AgentExecutionService
@inject IProjectService ProjectService
@inject PullRequestDataService PullRequestDataService
@inject IFleeceService FleeceService
@inject ILogger<AgentWorkersTab> Logger

<div class="agent-workers-tab">
    <div class="flex justify-between items-center mb-3">
        <h5 class="mb-0">Agent Workers</h5>
        <AsyncActionButton OnClick="RefreshAsync"
                           IsLoadingExternal="_isRefreshing"
                           CssClass="btn-outline-secondary btn-sm"
                           Text="Refresh">
            <IconContent>
                <i class="bi bi-arrow-clockwise"></i>
            </IconContent>
        </AsyncActionButton>
    </div>

    @if (_isLoading)
    {
        <LoadingSpinner Size="SpinnerSize.Lg" Label="Loading agent workers..." Centered="true" />
    }
    else if (_issueGroups.Count == 0 && _orphanedContainers.Count == 0)
    {
        <div class="empty-state">
            <div class="empty-icon"><i class="bi bi-cpu"></i></div>
            <h5>No Active Agent Workers</h5>
            <p class="text-text-muted">Start a Claude Code session from an issue or pull request to see agent workers here.</p>
        </div>
    }
    else
    {
        @foreach (var group in _issueGroups)
        {
            <div class="issue-group mb-3">
                <div class="issue-group-header">
                    <div class="issue-group-title">
                        @if (group.EntityInfo != null)
                        {
                            <span class="entity-type-badge @GetEntityTypeBadgeClass(group.EntityInfo.EntityType)">
                                @group.EntityInfo.EntityType
                            </span>
                            <span class="entity-title">@group.EntityInfo.Title</span>
                        }
                        else
                        {
                            <span class="text-text-muted">@group.EntityId</span>
                        }
                    </div>
                    <div class="issue-group-actions">
                        <span class="badge bg-secondary me-2">@group.Sessions.Count agent@(group.Sessions.Count != 1 ? "s" : "")</span>
                        @if (group.Sessions.Count > 1)
                        {
                            <button class="btn btn-sm btn-outline-danger"
                                    @onclick="() => StopAllForEntityAsync(group.EntityId)"
                                    disabled="@(_stoppingEntities.Contains(group.EntityId))">
                                @if (_stoppingEntities.Contains(group.EntityId))
                                {
                                    <span class="spinner-border spinner-border-sm me-1" role="status"></span>
                                }
                                Stop All
                            </button>
                        }
                    </div>
                </div>

                <div class="sessions-table-container">
                    <table class="sessions-table">
                        <thead>
                            <tr>
                                <th class="col-status"></th>
                                <th>Mode</th>
                                <th>Model</th>
                                <th>Status</th>
                                <th>Started</th>
                                <th>Last Activity</th>
                                <th>Messages</th>
                                <th class="col-actions">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var session in group.Sessions)
                            {
                                var isSuperseded = group.Sessions.IndexOf(session) > 0;
                                <tr class="@(isSuperseded ? "superseded" : "")">
                                    <td class="col-status">
                                        <span class="status-dot @session.Status.ToIndicatorClass()" title="@session.Status.ToDisplayLabel()"></span>
                                    </td>
                                    <td>
                                        <span class="badge @(session.Mode == SessionMode.Plan ? "bg-status-info" : "bg-status-success")">
                                            @session.Mode
                                        </span>
                                    </td>
                                    <td><code class="model-name">@GetModelDisplayName(session.Model)</code></td>
                                    <td>@session.Status.ToDisplayLabel()</td>
                                    <td title="@session.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss UTC")">@FormatRelativeTime(session.CreatedAt)</td>
                                    <td title="@session.LastActivityAt.ToString("yyyy-MM-dd HH:mm:ss UTC")">@FormatRelativeTime(session.LastActivityAt)</td>
                                    <td>@session.Messages.Count</td>
                                    <td class="col-actions">
                                        <div class="action-buttons">
                                            <a href="/session/@session.Id" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-chat-dots"></i>
                                            </a>
                                            <button class="btn btn-sm btn-outline-danger"
                                                    @onclick="() => StopSessionAsync(session.Id)"
                                                    disabled="@(_stoppingSessions.Contains(session.Id))"
                                                    title="Stop this agent">
                                                @if (_stoppingSessions.Contains(session.Id))
                                                {
                                                    <span class="spinner-border spinner-border-sm" role="status"></span>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-stop-circle"></i>
                                                }
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }

        @if (_orphanedContainers.Count > 0)
        {
            <div class="orphaned-section mt-4">
                <div class="orphaned-header">
                    <h6 class="mb-0">
                        <i class="bi bi-exclamation-triangle me-1 text-warning"></i>
                        Orphaned Containers
                    </h6>
                    <span class="badge bg-warning text-dark">@_orphanedContainers.Count</span>
                </div>
                <p class="text-text-muted small mb-2">
                    These containers are running but not tracked by any active session. They may have been left behind after a service restart.
                </p>
                <div class="sessions-table-container">
                    <table class="sessions-table">
                        <thead>
                            <tr>
                                <th>Container Name</th>
                                <th>Container ID</th>
                                <th>Created</th>
                                <th>Status</th>
                                <th class="col-actions">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var container in _orphanedContainers)
                            {
                                <tr>
                                    <td><code>@container.ContainerName</code></td>
                                    <td><code class="container-id">@container.ContainerId[..Math.Min(12, container.ContainerId.Length)]</code></td>
                                    <td>@container.CreatedAt</td>
                                    <td>@container.Status</td>
                                    <td class="col-actions">
                                        <button class="btn btn-sm btn-outline-danger"
                                                @onclick="() => StopOrphanedContainerAsync(container.ContainerId)"
                                                disabled="@(_stoppingContainers.Contains(container.ContainerId))"
                                                title="Kill this container">
                                            @if (_stoppingContainers.Contains(container.ContainerId))
                                            {
                                                <span class="spinner-border spinner-border-sm" role="status"></span>
                                            }
                                            else
                                            {
                                                <i class="bi bi-x-circle"></i> <text>Kill</text>
                                            }
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    }

    @if (!string.IsNullOrEmpty(_errorMessage))
    {
        <div class="alert alert-danger mt-3">@_errorMessage</div>
    }
</div>

