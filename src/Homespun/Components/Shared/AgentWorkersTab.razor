        align-items: center;
        flex-shrink: 0;
    }

    .entity-type-badge {
        padding: 0.125rem 0.5rem;
        border-radius: var(--radius-sm);
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        flex-shrink: 0;
    }

    .entity-type-badge.pr {
        background: var(--status-info);
        color: white;
    }

    .entity-type-badge.issue {
