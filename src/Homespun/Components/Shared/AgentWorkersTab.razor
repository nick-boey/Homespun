    }

    .orphaned-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: var(--spacing-sm);
    }
</style>

@code {
    [Parameter] public required string ProjectId { get; set; }

    private bool _isLoading = true;
    private bool _isRefreshing;
    private string? _errorMessage;
    private List<IssueGroupInfo> _issueGroups = [];
    private IReadOnlyList<OrphanedContainer> _orphanedContainers = [];
    private Dictionary<string, EntityInfo> _entityInfoCache = new();
    private HashSet<string> _stoppingSessions = new();
    private HashSet<string> _stoppingEntities = new();
    private HashSet<string> _stoppingContainers = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
        _isLoading = false;
    }

    private async Task RefreshAsync()
    {
        _isRefreshing = true;
        StateHasChanged();

        try
        {
            await LoadDataAsync();
        }
        finally
        {
            _isRefreshing = false;
            StateHasChanged();
        }
    }

    private async Task LoadDataAsync()
    {
        try
        {
            var sessions = ClaudeSessionService.GetSessionsForProject(ProjectId);
            await LoadEntityInformationAsync(sessions);

            // Group sessions by entity ID, sorted by most recent first within each group
            _issueGroups = sessions
                .GroupBy(s => s.EntityId)
                .Select(group => new IssueGroupInfo
                {
                    EntityId = group.Key,
                    EntityInfo = _entityInfoCache.GetValueOrDefault(group.Key),
                    Sessions = group
                        .OrderByDescending(s => s.CreatedAt)
                        .ToList()
                })
                .OrderBy(g => g.EntityInfo?.Title ?? g.EntityId)
                .ToList();

            // Discover orphaned containers
            try
            {
                _orphanedContainers = await AgentExecutionService.GetOrphanedContainersAsync();
            }
            catch (Exception ex)
            {
                Logger.LogWarning(ex, "Failed to check for orphaned containers");
                _orphanedContainers = [];
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to load agent workers for project {ProjectId}", ProjectId);
            _errorMessage = $"Failed to load agent workers: {ex.Message}";
        }
    }

    private async Task LoadEntityInformationAsync(IReadOnlyList<ClaudeSession> sessions)
    {
        _entityInfoCache.Clear();
        var project = await ProjectService.GetByIdAsync(ProjectId);

        foreach (var session in sessions)
        {
            if (_entityInfoCache.ContainsKey(session.EntityId))
                continue;

            try
            {
                // Try as a PR first
                var pr = await PullRequestDataService.GetByIdAsync(session.EntityId);
                if (pr != null)
                {
                    _entityInfoCache[session.EntityId] = new EntityInfo("PR", pr.Title);
                    continue;
                }

                // Try as a Fleece issue
                if (project != null)
                {
                    try
                    {
                        var issue = await FleeceService.GetIssueAsync(project.LocalPath, session.EntityId);
                        if (issue != null)
                        {
                            _entityInfoCache[session.EntityId] = new EntityInfo("Issue", issue.Title);
                            continue;
                        }
                    }
                    catch { }
                }

                // Fallback
                _entityInfoCache[session.EntityId] = new EntityInfo("Unknown", session.EntityId);
            }
            catch
            {
                _entityInfoCache[session.EntityId] = new EntityInfo("Unknown", session.EntityId);
            }
        }
    }

    private async Task StopSessionAsync(string sessionId)
    {
        _stoppingSessions.Add(sessionId);
        _errorMessage = null;
        StateHasChanged();

        try
        {
            await ClaudeSessionService.StopSessionAsync(sessionId);
            await LoadDataAsync();
        }
        catch (Exception ex)
        {
            _errorMessage = $"Failed to stop session: {ex.Message}";
        }
        finally
        {
            _stoppingSessions.Remove(sessionId);
            StateHasChanged();
        }
    }

    private async Task StopAllForEntityAsync(string entityId)
    {
        _stoppingEntities.Add(entityId);
        _errorMessage = null;
        StateHasChanged();

        try
        {
            await ClaudeSessionService.StopAllSessionsForEntityAsync(entityId);
            await LoadDataAsync();
        }
        catch (Exception ex)
        {
            _errorMessage = $"Failed to stop sessions: {ex.Message}";
        }
        finally
        {
            _stoppingEntities.Remove(entityId);
            StateHasChanged();
        }
    }

    private async Task StopOrphanedContainerAsync(string containerId)
    {
        _stoppingContainers.Add(containerId);
        _errorMessage = null;
        StateHasChanged();

        try
        {
            await AgentExecutionService.StopContainerByIdAsync(containerId);
            await LoadDataAsync();
        }
        catch (Exception ex)
        {
            _errorMessage = $"Failed to stop container: {ex.Message}";
        }
        finally
        {
            _stoppingContainers.Remove(containerId);
            StateHasChanged();
        }
    }

    private static string FormatRelativeTime(DateTime utcTime)
    {
        var elapsed = DateTime.UtcNow - utcTime;
        if (elapsed.TotalSeconds < 60)
            return $"{(int)elapsed.TotalSeconds}s ago";
        if (elapsed.TotalMinutes < 60)
            return $"{(int)elapsed.TotalMinutes}m ago";
        if (elapsed.TotalHours < 24)
            return $"{(int)elapsed.TotalHours}h {elapsed.Minutes}m ago";
        return $"{(int)elapsed.TotalDays}d ago";
    }

    private static string GetModelDisplayName(string model)
    {
        var parts = model.Split('/');
        return parts.Length > 1 ? parts[1] : model;
    }

    private static string GetEntityTypeBadgeClass(string entityType) => entityType.ToLowerInvariant() switch
    {
        "pr" => "pr",
        "issue" => "issue",
        _ => ""
    };

    private record EntityInfo(string EntityType, string Title);

    private class IssueGroupInfo
    {
        public required string EntityId { get; set; }
        public EntityInfo? EntityInfo { get; set; }
        public required List<ClaudeSession> Sessions { get; set; }
    }
}
